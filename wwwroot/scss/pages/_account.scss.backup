                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
            }

            &:active {
                transform: translateY(0);
            }
        }
    }

    // Empty State
    .text-center.py-4,
    .text-center.py-5 {
        .text-muted {
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        a {
            color: #667eea;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s ease;

            &:hover {
                color: #764ba2;
                text-decoration: underline;
            }
        }
    }
}

// Responsive
@media (max-width: 992px) {
    .account-page {
        .nav-tabs {
            .nav-link {
                padding: 0.75rem 1rem;
                font-size: 0.9rem;
            }
        }

        .table {
            font-size: 0.9rem;

            thead th,
            tbody td {
                padding: 0.75rem;
            }
        }
    }
}

@media (max-width: 768px) {
    .account-page {
        padding: 2rem 0;

        h1 {
            font-size: 2rem;
        }

        .card {
            margin-bottom: 1rem;
        }

        .nav-tabs {
            .nav-link {
                padding: 0.625rem 0.75rem;
                font-size: 0.85rem;
            }
        }

        .table-responsive {
            font-size: 0.85rem;
        }

        .order-card {
            .d-flex {
                flex-direction: column !important;
                gap: 1rem;

                > div {
                    text-align: left !important;
                }
            }
        }
    }
}

@media (max-width: 576px) {
    .account-page {
        padding: 1.5rem 0;

        h1 {
            font-size: 1.75rem;
        }

        .nav-tabs {
            overflow-x: auto;
            flex-wrap: nowrap;
            -webkit-overflow-scrolling: touch;

            .nav-link {
                white-space: nowrap;
                padding: 0.5rem 1rem;
                font-size: 0.8rem;
            }
        }

        .card {
            .display-4 {
                font-size: 2rem;
            }
        }

        .badge {
            font-size: 1rem;
            padding: 0.375rem 0.75rem;
        }

        form {
            .btn-primary {
                padding: 0.75rem 1.5rem;
            }
        }
    }
}
