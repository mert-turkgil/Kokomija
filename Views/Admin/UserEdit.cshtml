@model Kokomija.Models.ViewModels.Admin.UserEditDto
@{
    ViewData["Title"] = $"Edit User: {Model.Email}";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-person-badge"></i>
                                Edit User
                            </h1>
                            <p class="mb-0">Manage user information and review their activity</p>
                        </div>
                        <a asp-action="UserManagement" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- User Information -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-person-circle"></i> User Information
                        </h5>
                        <form asp-action="UserEdit" method="post">
                            <input type="hidden" asp-for="Id" />
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" asp-for="Email" readonly />
                                <small class="text-muted">Email cannot be changed</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" asp-for="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" asp-for="EmailConfirmed" id="emailConfirmed" />
                                <label class="form-check-label" for="emailConfirmed">
                                    Email Confirmed
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- User Stats -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-graph-up"></i> Account Statistics
                        </h5>
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div>
                                <small class="text-muted">Account Status</small>
                                <h6 class="mb-0">
                                    @if (ViewBag.IsUserRoot == true)
                                    {
                                        <span class="badge bg-dark">
                                            <i class="bi bi-shield-fill-check"></i> Root Administrator
                                        </span>
                                        <small class="d-block text-muted mt-1">Protected - Cannot be banned or deleted</small>
                                    }
                                    else if (Model.IsBanned)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-fill-exclamation"></i> Banned
                                        </span>
                                        if (Model.BannedUntil.HasValue)
                                        {
                                            <small class="d-block text-muted">Until @Model.BannedUntil.Value.ToString("MMMM dd, yyyy")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill"></i> Active
                                        </span>
                                    }
                                </h6>
                            </div>
                            <div>
                                @if (ViewBag.IsUserRoot != true)
                                {
                                    @if (Model.IsBanned)
                                    {
                                        <button type="button" class="btn btn-sm btn-success" onclick="unbanUser('@Model.Id')">
                                            <i class="bi bi-unlock"></i> Unban
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-warning" onclick="showBanModal('@Model.Id')">
                                            <i class="bi bi-shield-exclamation"></i> Ban User
                                        </button>
                                    }
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted">Member Since</small>
                                <h6 class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</h6>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted">Last Login</small>
                                <h6 class="mb-0">
                                    @if (Model.LastLogin.HasValue)
                                    {
                                        @Model.LastLogin.Value.ToString("MMMM dd, yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </h6>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">Total Reviews</small>
                                <h6 class="mb-0">@Model.Reviews.Count</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Danger Zone -->
                @if (ViewBag.IsUserRoot != true)
                {
                    <div class="card border-danger mt-4">
                        <div class="card-body">
                            <h6 class="border-bottom border-danger pb-2 mb-3 text-danger">
                                <i class="bi bi-exclamation-triangle-fill"></i> Danger Zone
                            </h6>
                            <p class="mb-2">Permanently delete this user account. This action cannot be undone!</p>
                            <button type="button" class="btn btn-danger" onclick="deleteUser('@Model.Id', '@Model.Email')">
                                <i class="bi bi-trash"></i> Delete User
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card border-dark mt-4">
                        <div class="card-body">
                            <h6 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-shield-fill-check"></i> Root Protection
                            </h6>
                            <p class="mb-0"><strong>Root users are protected:</strong></p>
                            <ul class="mb-0 mt-2">
                                <li>Cannot be banned</li>
                                <li>Cannot be deleted</li>
                                <li>Only Root users can edit Root accounts</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- User Reviews -->
        @if (Model.Reviews.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-star-fill"></i> User Reviews (@Model.Reviews.Count)
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0" id="reviewsTable">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Rating</th>
                                            <th>Comment</th>
                                            <th>Date</th>
                                            <th>Visible</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in Model.Reviews)
                                        {
                                            <tr id="review-@review.Id">
                                                <td>
                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@review.ProductId" target="_blank">
                                                        @Html.Raw(System.Net.WebUtility.HtmlEncode(review.ProductName))
                                                    </a>
                                                </td>
                                                <td>
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating)
                                                        {
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-muted"></i>
                                                        }
                                                    }
                                                    <small class="text-muted">(@review.Rating.ToString("0.0"))</small>
                                                </td>
                                                <td>
                                                    <div class="review-comment-cell" id="comment-display-@review.Id">
                                                        @Html.Raw(System.Net.WebUtility.HtmlEncode(review.Comment))
                                                    </div>
                                                    <textarea class="form-control d-none" id="comment-edit-@review.Id" rows="2">@Html.Raw(System.Net.WebUtility.HtmlEncode(review.Comment))</textarea>
                                                </td>
                                                <td>
                                                    <small>@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-@(review.IsVisible ? "success" : "secondary")" id="visibility-badge-@review.Id">
                                                        @(review.IsVisible ? "Visible" : "Hidden")
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <div class="btn-group" role="group">
                                                        <button type="button" class="btn btn-sm btn-outline-primary d-none" id="save-btn-@review.Id" onclick="saveReview(@review.Id)">
                                                            <i class="bi bi-check"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-outline-secondary d-none" id="cancel-btn-@review.Id" onclick="cancelEdit(@review.Id)">
                                                            <i class="bi bi-x"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-outline-primary" id="edit-btn-@review.Id" onclick="editReview(@review.Id)" title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="toggleVisibility(@review.Id)" title="Toggle Visibility">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteReview(@review.Id)" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Ban User Modal -->
<div class="modal fade" id="banUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ban User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Ban user: <strong>@Model.Email</strong></p>
                <form id="banUserForm">
                    <div class="mb-3">
                        <label class="form-label">Ban Duration</label>
                        <select class="form-select" id="banDays" required>
                            <option value="1">1 Day</option>
                            <option value="3">3 Days</option>
                            <option value="7" selected>7 Days</option>
                            <option value="30">30 Days</option>
                            <option value="90">90 Days</option>
                            <option value="365">1 Year</option>
                            <option value="3650">Permanent (10 Years)</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmBan()">
                    <i class="bi bi-shield-exclamation"></i> Ban User
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <!-- DataTables CSS and JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        // Initialize DataTables with XSS protection
        $(document).ready(function() {
            @if (Model.Reviews.Any())
            {
                <text>
                $('#reviewsTable').DataTable({
                    pageLength: 10,
                    order: [[3, 'desc']], // Sort by date column (index 3) descending
                    columnDefs: [
                        { targets: [2], orderable: false }, // Disable sorting on Comment column
                        { targets: [5], orderable: false }  // Disable sorting on Actions column
                    ],
                    language: {
                        search: "Search reviews:",
                        lengthMenu: "Show _MENU_ reviews per page",
                        info: "Showing _START_ to _END_ of _TOTAL_ reviews",
                        infoEmpty: "No reviews found",
                        infoFiltered: "(filtered from _MAX_ total reviews)",
                        zeroRecords: "No matching reviews found"
                    },
                    // Enable HTML encoding for security
                    autoEscape: true
                });
                </text>
            }
        });

        function showBanModal(userId) {
            $('#banUserModal').modal('show');
        }

        function confirmBan() {
            const days = $('#banDays').val();
            
            $.ajax({
                url: '@Url.Action("UserBan")',
                type: 'POST',
                data: {
                    id: '@Model.Id',
                    days: days,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error banning user');
                }
            });
        }

        function unbanUser(userId) {
            if (!confirm('Are you sure you want to unban this user?')) return;

            $.ajax({
                url: '@Url.Action("UserUnban")',
                type: 'POST',
                data: {
                    id: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error unbanning user');
                }
            });
        }

        function deleteUser(userId, userEmail) {
            if (!confirm('Are you sure you want to DELETE user "' + userEmail + '"? This action cannot be undone!')) return;

            $.ajax({
                url: '@Url.Action("UserDelete")',
                type: 'POST',
                data: {
                    id: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        window.location.href = '@Url.Action("UserManagement")';
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error deleting user');
                }
            });
        }

        // Review management
        function editReview(id) {
            $('#comment-display-' + id).addClass('d-none');
            $('#comment-edit-' + id).removeClass('d-none');
            $('#edit-btn-' + id).addClass('d-none');
            $('#save-btn-' + id).removeClass('d-none');
            $('#cancel-btn-' + id).removeClass('d-none');
        }

        function cancelEdit(id) {
            $('#comment-display-' + id).removeClass('d-none');
            $('#comment-edit-' + id).addClass('d-none');
            $('#edit-btn-' + id).removeClass('d-none');
            $('#save-btn-' + id).addClass('d-none');
            $('#cancel-btn-' + id).addClass('d-none');
        }

        function saveReview(id) {
            const comment = $('#comment-edit-' + id).val();
            
            $.ajax({
                url: '@Url.Action("ReviewEdit")',
                type: 'POST',
                data: {
                    id: id,
                    comment: comment,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        $('#comment-display-' + id).text(comment);
                        cancelEdit(id);
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error updating review');
                }
            });
        }

        function toggleVisibility(id) {
            $.ajax({
                url: '@Url.Action("ReviewToggleVisibility")',
                type: 'POST',
                data: {
                    id: id,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        const badge = $('#visibility-badge-' + id);
                        if (response.isVisible) {
                            badge.removeClass('bg-secondary').addClass('bg-success').text('Visible');
                        } else {
                            badge.removeClass('bg-success').addClass('bg-secondary').text('Hidden');
                        }
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error toggling visibility');
                }
            });
        }

        function deleteReview(id) {
            if (!confirm('Are you sure you want to delete this review?')) return;

            $.ajax({
                url: '@Url.Action("ReviewDelete")',
                type: 'POST',
                data: {
                    id: id,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        $('#review-' + id).fadeOut(300, function() {
                            $(this).remove();
                        });
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error deleting review');
                }
            });
        }
    </script>

    <style>
        .review-comment-cell {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}
