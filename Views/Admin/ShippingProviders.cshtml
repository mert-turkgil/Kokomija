@model Kokomija.Models.ViewModels.ShippingProvidersViewModel
@{
    ViewData["Title"] = "Shipping Providers";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-truck"></i>
                                Shipping Providers
                            </h1>
                            <p class="mb-0">Manage shipping carriers and delivery providers</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back to Dashboard
                            </a>
                            <button type="button" class="btn btn-primary" onclick="showCreateProviderModal()">
                                <i class="bi bi-plus-lg"></i>
                                Add Provider
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-primary">
                        <i class="bi bi-truck"></i>
                    </div>
                    <div>
                        <h6>@Model.TotalProviders</h6>
                        <small>Total Providers</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div>
                        <h6>@Model.ActiveProviders</h6>
                        <small>Active</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-warning">
                        <i class="bi bi-pause-circle"></i>
                    </div>
                    <div>
                        <h6>@(Model.TotalProviders - Model.ActiveProviders)</h6>
                        <small>Inactive</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Providers Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                            <h5 class="mb-0">
                                <i class="bi bi-list"></i> All Providers
                            </h5>
                            <div class="d-flex gap-2">
                                <a asp-action="ShippingRates" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-tags"></i> Manage Rates
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="providersTable">
                                <thead class="table-light">
                                    <tr>
                                        <th width="60">ID</th>
                                        <th>Name</th>
                                        <th width="120">Code</th>
                                        <th width="100">Rates</th>
                                        <th width="150">Supported Countries</th>
                                        <th width="100">Status</th>
                                        <th width="150">Created</th>
                                        <th width="200">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var provider in Model.Providers)
                                    {
                                        <tr>
                                            <td>@provider.Id</td>
                                            <td>
                                                <strong>@provider.Name</strong>
                                                @if (!string.IsNullOrEmpty(provider.TrackingUrlTemplate))
                                                {
                                                    <br><small class="text-muted"><i class="bi bi-link-45deg"></i> Tracking Enabled</small>
                                                }
                                            </td>
                                            <td><code>@provider.Code</code></td>
                                            <td>
                                                <span class="badge bg-info">@provider.RatesCount</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(provider.SupportedCountries))
                                                {
                                                    <small class="text-muted">@provider.SupportedCountries.Substring(0, Math.Min(20, provider.SupportedCountries.Length))...</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">All countries</small>
                                                }
                                            </td>
                                            <td>
                                                @if (provider.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td><small>@provider.CreatedAt.ToString("yyyy-MM-dd")</small></td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-primary" onclick="editProvider(@provider.Id)" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-@(provider.IsActive ? "warning" : "success")" onclick="toggleProvider(@provider.Id)" title="@(provider.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="bi bi-@(provider.IsActive ? "pause" : "play")-circle"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger" onclick="deleteProvider(@provider.Id)" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Provider Modal -->
<div class="modal fade" id="providerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="providerModalTitle">Add Shipping Provider</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="providerForm">
                    <input type="hidden" id="providerId" />
                    
                    <div class="mb-3">
                        <label for="providerName" class="form-label">Provider Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="providerName" required>
                    </div>

                    <div class="mb-3">
                        <label for="providerCode" class="form-label">Provider Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="providerCode" required>
                        <div class="form-text">Unique code for the provider (e.g., ups, fedex, dhl)</div>
                    </div>

                    <div class="mb-3">
                        <label for="trackingUrlTemplate" class="form-label">Tracking URL Template</label>
                        <input type="text" class="form-control" id="trackingUrlTemplate" placeholder="https://example.com/track?id={trackingNumber}">
                        <div class="form-text">Use {trackingNumber} as placeholder</div>
                    </div>

                    <div class="mb-3">
                        <label for="supportedCountries" class="form-label">Supported Countries (JSON)</label>
                        <textarea class="form-control" id="supportedCountries" rows="3" placeholder='["PL", "US", "GB"]'></textarea>
                        <div class="form-text">JSON array of ISO country codes</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="apiKey" class="form-label">API Key</label>
                            <input type="text" class="form-control" id="apiKey">
                            <div class="form-text">Required for live tracking and rate calculation</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="apiSecret" class="form-label">API Secret</label>
                            <input type="password" class="form-control" id="apiSecret">
                        </div>
                    </div>

                    <!-- Quick Setup Presets -->
                    <div class="mb-3">
                        <label class="form-label d-block">Quick Setup Presets</label>
                        <div class="btn-group flex-wrap" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="loadPreset('ups')">
                                <img src="https://www.ups.com/assets/resources/images/UPS_logo.svg" alt="UPS" height="16" class="me-1" onerror="this.style.display='none'">
                                UPS
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="loadPreset('dhl')">
                                <i class="bi bi-box"></i> DHL
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="loadPreset('fedex')">
                                <i class="bi bi-box"></i> FedEx
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="loadPreset('inpost')">
                                <i class="bi bi-box"></i> InPost
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="loadPreset('dpd')">
                                <i class="bi bi-box"></i> DPD
                            </button>
                        </div>
                    </div>

                    <!-- API Documentation Links -->
                    <div id="apiDocsSection" class="alert alert-info d-none">
                        <h6><i class="bi bi-info-circle"></i> API Setup Instructions</h6>
                        <p id="apiDocsDescription" class="mb-2 small"></p>
                        <a id="apiDocsLink" href="#" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-box-arrow-up-right"></i> Open API Documentation
                        </a>
                    </div>

                    <div class="mb-3 form-check" id="isActiveContainer" style="display: none;">
                        <input type="checkbox" class="form-check-input" id="isActive">
                        <label class="form-check-label" for="isActive">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProvider()">Save Provider</button>
            </div>
        </div>
    </div>
</div>

<!-- Test Connection Modal -->
<div class="modal fade" id="testConnectionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-plug"></i> Test API Connection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="testConnectionResult">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Testing...</span>
                        </div>
                        <p class="mt-3">Testing connection to carrier API...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-card-small {
            background: white;
            border-radius: 10px;
            padding: 15px;
            display: flex;
            align-items: center;
            gap: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }
        .stat-icon-small {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            color: white;
        }
        .stat-card-small h6 {
            margin: 0;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script>
        let isEditMode = false;

        // Carrier presets configuration
        const carrierPresets = {
            ups: {
                name: 'UPS',
                code: 'ups',
                trackingUrlTemplate: 'https://www.ups.com/track?loc=en_PL&tracknum={trackingNumber}',
                supportedCountries: '["PL", "DE", "FR", "GB", "US", "CA", "IT", "ES", "NL", "BE"]',
                apiDocsUrl: 'https://developer.ups.com/catalog?loc=en_PL',
                description: 'Get your UPS API credentials from the UPS Developer Portal. You\'ll need a Client ID and Client Secret for OAuth 2.0 authentication.'
            },
            dhl: {
                name: 'DHL Express',
                code: 'dhl',
                trackingUrlTemplate: 'https://www.dhl.com/pl-en/home/tracking.html?tracking-id={trackingNumber}',
                supportedCountries: '["PL", "DE", "FR", "GB", "US", "CA", "IT", "ES", "NL", "BE", "AT", "CH"]',
                apiDocsUrl: 'https://developer.dhl.com/',
                description: 'Register at DHL Developer Portal to get your API Key. DHL provides tracking, shipping, and rate calculation APIs.'
            },
            fedex: {
                name: 'FedEx',
                code: 'fedex',
                trackingUrlTemplate: 'https://www.fedex.com/fedextrack/?trknbr={trackingNumber}',
                supportedCountries: '["PL", "DE", "FR", "GB", "US", "CA", "IT", "ES"]',
                apiDocsUrl: 'https://developer.fedex.com/',
                description: 'Create a FedEx Developer account to obtain your API credentials. FedEx uses OAuth 2.0 for authentication.'
            },
            inpost: {
                name: 'InPost',
                code: 'inpost',
                trackingUrlTemplate: 'https://inpost.pl/sledzenie-przesylek?number={trackingNumber}',
                supportedCountries: '["PL"]',
                apiDocsUrl: 'https://dokumentacja-inpost.atlassian.net/wiki/spaces/PL/overview',
                description: 'Contact InPost business support to get API access. InPost Paczkomaty API provides parcel locker integration.'
            },
            dpd: {
                name: 'DPD',
                code: 'dpd',
                trackingUrlTemplate: 'https://www.dpd.com.pl/tracking?shipmentId={trackingNumber}',
                supportedCountries: '["PL", "DE", "FR", "GB", "IT", "ES", "NL", "BE", "AT", "CZ", "SK"]',
                apiDocsUrl: 'https://www.dpd.com.pl/dla-firm/integracje',
                description: 'DPD Poland provides API integration for business customers. Contact DPD to set up your API credentials.'
            }
        };

        function loadPreset(carrier) {
            const preset = carrierPresets[carrier];
            if (!preset) return;

            document.getElementById('providerName').value = preset.name;
            document.getElementById('providerCode').value = preset.code;
            document.getElementById('trackingUrlTemplate').value = preset.trackingUrlTemplate;
            document.getElementById('supportedCountries').value = preset.supportedCountries;

            // Show API documentation section
            const docsSection = document.getElementById('apiDocsSection');
            docsSection.classList.remove('d-none');
            document.getElementById('apiDocsDescription').textContent = preset.description;
            document.getElementById('apiDocsLink').href = preset.apiDocsUrl;
        }

        function showCreateProviderModal() {
            isEditMode = false;
            document.getElementById('providerModalTitle').textContent = 'Add Shipping Provider';
            document.getElementById('providerForm').reset();
            document.getElementById('providerId').value = '';
            document.getElementById('providerCode').disabled = false;
            document.getElementById('isActiveContainer').style.display = 'none';
            document.getElementById('apiDocsSection').classList.add('d-none');
            new bootstrap.Modal(document.getElementById('providerModal')).show();
        }

        function editProvider(id) {
            isEditMode = true;
            const provider = @Html.Raw(Json.Serialize(Model.Providers));
            const providerData = provider.find(p => p.id === id);
            
            if (!providerData) return;

            document.getElementById('providerModalTitle').textContent = 'Edit Shipping Provider';
            document.getElementById('providerId').value = providerData.id;
            document.getElementById('providerName').value = providerData.name;
            document.getElementById('providerCode').value = providerData.code;
            document.getElementById('providerCode').disabled = true;
            document.getElementById('trackingUrlTemplate').value = providerData.trackingUrlTemplate || '';
            document.getElementById('supportedCountries').value = providerData.supportedCountries || '';
            document.getElementById('isActiveContainer').style.display = 'block';
            document.getElementById('isActive').checked = providerData.isActive;
            document.getElementById('apiDocsSection').classList.add('d-none');

            // Check if we have a preset for this carrier
            if (carrierPresets[providerData.code]) {
                const preset = carrierPresets[providerData.code];
                const docsSection = document.getElementById('apiDocsSection');
                docsSection.classList.remove('d-none');
                document.getElementById('apiDocsDescription').textContent = preset.description;
                document.getElementById('apiDocsLink').href = preset.apiDocsUrl;
            }

            new bootstrap.Modal(document.getElementById('providerModal')).show();
        }

        async function saveProvider() {
            const id = document.getElementById('providerId').value;
            const data = {
                name: document.getElementById('providerName').value,
                code: document.getElementById('providerCode').value,
                trackingUrlTemplate: document.getElementById('trackingUrlTemplate').value,
                supportedCountries: document.getElementById('supportedCountries').value,
                apiKey: document.getElementById('apiKey').value,
                apiSecret: document.getElementById('apiSecret').value,
                isActive: isEditMode ? document.getElementById('isActive').checked : true
            };

            try {
                const url = isEditMode ? `/Admin/UpdateShippingProvider?id=${id}` : '/Admin/CreateShippingProvider';
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('providerModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while saving the provider.');
            }
        }

        async function toggleProvider(id) {
            if (!confirm('Are you sure you want to toggle this provider status?')) return;

            try {
                const response = await fetch(`/Admin/ToggleShippingProvider?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while toggling the provider status.');
            }
        }

        async function deleteProvider(id) {
            if (!confirm('Are you sure you want to delete this provider? This action cannot be undone.')) return;

            try {
                const response = await fetch(`/Admin/DeleteShippingProvider?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the provider.');
            }
        }

        async function testConnection(providerId) {
            const testModal = new bootstrap.Modal(document.getElementById('testConnectionModal'));
            testModal.show();

            try {
                const response = await fetch(`/Admin/TestCarrierConnection?id=${providerId}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                const resultDiv = document.getElementById('testConnectionResult');
                if (result.success) {
                    resultDiv.innerHTML = `
                        <div class="alert alert-success">
                            <h6><i class="bi bi-check-circle-fill"></i> Connection Successful</h6>
                            <p class="mb-0">${result.message}</p>
                        </div>
                    `;
                } else {
                    resultDiv.innerHTML = `
                        <div class="alert alert-danger">
                            <h6><i class="bi bi-x-circle-fill"></i> Connection Failed</h6>
                            <p class="mb-0">${result.message}</p>
                        </div>
                    `;
                }
            } catch (error) {
                document.getElementById('testConnectionResult').innerHTML = `
                    <div class="alert alert-danger">
                        <h6><i class="bi bi-x-circle-fill"></i> Error</h6>
                        <p class="mb-0">Failed to test connection. Please try again.</p>
                    </div>
                `;
            }
        }

        // Initialize DataTable
        $(document).ready(function() {
            if ($.fn.DataTable) {
                $('#providersTable').DataTable({
                    order: [[0, 'desc']],
                    pageLength: 25,
                    responsive: true
                });
            }
        });
    </script>
}
