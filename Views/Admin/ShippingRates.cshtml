@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        let isEditMode = false;

        function showCreateRateModal() {
            isEditMode = false;
            document.getElementById('rateModalTitle').textContent = 'Add Shipping Rate';
            document.getElementById('rateForm').reset();
            document.getElementById('rateId').value = '';
            document.getElementById('isActiveContainer').style.display = 'none';
            new bootstrap.Modal(document.getElementById('rateModal')).show();
        }

        function editRate(id) {
            isEditMode = true;
            const rates = @Html.Raw(Json.Serialize(Model.Rates));
            const rateData = rates.find(r => r.id === id);
            
            if (!rateData) return;

            document.getElementById('rateModalTitle').textContent = 'Edit Shipping Rate';
            document.getElementById('rateId').value = rateData.id;
            document.getElementById('providerId').value = rateData.providerId;
            document.getElementById('zone').value = rateData.zone || '';
            document.getElementById('country').value = rateData.country || '';
            document.getElementById('rate').value = rateData.rate;
            document.getElementById('freeShippingThreshold').value = rateData.freeShippingThreshold || '';
            document.getElementById('estimatedDaysMin').value = rateData.estimatedDaysMin;
            document.getElementById('estimatedDaysMax').value = rateData.estimatedDaysMax;
            document.getElementById('isActiveContainer').style.display = 'block';
            document.getElementById('isActive').checked = rateData.isActive;

            new bootstrap.Modal(document.getElementById('rateModal')).show();
        }

        async function saveRate() {
            const id = document.getElementById('rateId').value;
            const data = {
                providerId: parseInt(document.getElementById('providerId').value),
                zone: document.getElementById('zone').value,
                country: document.getElementById('country').value,
                rate: parseFloat(document.getElementById('rate').value),
                freeShippingThreshold: document.getElementById('freeShippingThreshold').value ? parseFloat(document.getElementById('freeShippingThreshold').value) : null,
                estimatedDaysMin: parseInt(document.getElementById('estimatedDaysMin').value),
                estimatedDaysMax: parseInt(document.getElementById('estimatedDaysMax').value),
                isActive: isEditMode ? document.getElementById('isActive').checked : true
            };

            try {
                const url = isEditMode ? `/Admin/UpdateShippingRate?id=${id}` : '/Admin/CreateShippingRate';
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('rateModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while saving the rate.');
            }
        }

        async function toggleRate(id) {
            if (!confirm('Are you sure you want to toggle this rate status?')) return;

            try {
                const response = await fetch(`/Admin/ToggleShippingRate?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while toggling the rate status.');
            }
        }

        async function deleteRate(id) {
            if (!confirm('Are you sure you want to delete this rate? This action cannot be undone.')) return;

            try {
                const response = await fetch(`/Admin/DeleteShippingRate?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the rate.');
            }
        }

        // Initialize DataTable with provider filter
        $(document).ready(function() {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            const table = $('#ratesTable').DataTable({
                order: [[0, 'desc']],
                pageLength: 25,
                responsive: true,
                language: {
                    search: "<i class='bi bi-search'></i> Search:",
                    lengthMenu: "Show _MENU_ rates",
                    info: "Showing _START_ to _END_ of _TOTAL_ rates",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "<i class='bi bi-chevron-right'></i>",
                        previous: "<i class='bi bi-chevron-left'></i>"
                    }
                }
            });

            $('#providerFilter').on('change', function() {
                const val = $(this).val();
                if (val) {
                    table.column(1).search(val ? '^' + table.column(1).data().eq(table.rows({search: 'applied'}).indexes().filter(idx => table.row(idx).node().dataset.provider == val)).join('|') + '$' : '', true, false).draw();
                } else {
                    table.column(1).search('').draw();
                }
            });
        });
    </script>
}
