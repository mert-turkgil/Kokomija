@model Kokomija.Models.ViewModels.TaxRatesViewModel
@{
    ViewData["Title"] = "Tax Rates";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-receipt"></i>
                                Tax Rates Management
                            </h1>
                            <p class="mb-0">Configure tax rates with Stripe integration</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back to Dashboard
                            </a>
                            <button type="button" class="btn btn-primary" onclick="showCreateTaxRateModal()">
                                <i class="bi bi-plus-lg"></i>
                                Add Tax Rate
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-primary">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div>
                        <h6>@Model.TotalTaxRates</h6>
                        <small>Total Tax Rates</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div>
                        <h6>@Model.ActiveTaxRates</h6>
                        <small>Active</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-info">
                        <i class="bi bi-star"></i>
                    </div>
                    <div>
                        <h6>@(Model.DefaultTaxRate?.Name ?? "None")</h6>
                        <small>Default Tax Rate</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tax Rates Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                            <h5 class="mb-0">
                                <i class="bi bi-list"></i> All Tax Rates
                            </h5>
                            <div class="d-flex gap-2">
                                <div class="text-muted">
                                    <small><i class="bi bi-stripe"></i> Synced with Stripe</small>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="taxRatesTable">
                                <thead class="table-light">
                                    <tr>
                                        <th width="60">ID</th>
                                        <th>Name</th>
                                        <th width="100">Rate</th>
                                        <th width="120">Country</th>
                                        <th width="100">State</th>
                                        <th width="200">Stripe Tax Rate ID</th>
                                        <th width="100">Status</th>
                                        <th width="100">Default</th>
                                        <th width="150">Created</th>
                                        <th width="250">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var taxRate in Model.TaxRates)
                                    {
                                        <tr class="@(taxRate.IsDefault ? "table-primary" : "")">
                                            <td>@taxRate.Id</td>
                                            <td>
                                                <strong>@taxRate.Name</strong>
                                                @if (!string.IsNullOrEmpty(taxRate.Description))
                                                {
                                                    <br><small class="text-muted">@taxRate.Description</small>
                                                }
                                            </td>
                                            <td><strong>@taxRate.Rate.ToString("N2")%</strong></td>
                                            <td><code>@taxRate.CountryCode</code></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(taxRate.StateCode))
                                                {
                                                    <code>@taxRate.StateCode</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td><small><code>@taxRate.StripeTaxRateId</code></small></td>
                                            <td>
                                                @if (taxRate.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                @if (taxRate.IsDefault)
                                                {
                                                    <span class="badge bg-primary"><i class="bi bi-star-fill"></i> Default</span>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="setDefault(@taxRate.Id)" title="Set as Default">
                                                        <i class="bi bi-star"></i>
                                                    </button>
                                                }
                                            </td>
                                            <td><small>@taxRate.CreatedAt.ToString("yyyy-MM-dd")</small></td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-primary" onclick="editTaxRate(@taxRate.Id)" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-info" onclick="syncWithStripe(@taxRate.Id)" title="Sync with Stripe">
                                                        <i class="bi bi-arrow-repeat"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-@(taxRate.IsActive ? "warning" : "success")" onclick="toggleTaxRate(@taxRate.Id)" title="@(taxRate.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="bi bi-@(taxRate.IsActive ? "pause" : "play")-circle"></i>
                                                    </button>
                                                    @if (!taxRate.IsDefault)
                                                    {
                                                        <button type="button" class="btn btn-outline-danger" onclick="deleteTaxRate(@taxRate.Id)" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Tax Rate Modal -->
<div class="modal fade" id="taxRateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taxRateModalTitle">Add Tax Rate</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Tax rate will be created in Stripe and synchronized automatically.
                </div>
                <form id="taxRateForm">
                    <input type="hidden" id="taxRateId" />
                    
                    <div class="mb-3">
                        <label for="taxRateName" class="form-label">Tax Rate Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="taxRateName" placeholder="e.g., VAT 23%" required>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="countryCode" class="form-label">Country Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="countryCode" placeholder="e.g., PL, US, GB" maxlength="10" required>
                            <div class="form-text">ISO country code (2 letters)</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="stateCode" class="form-label">State Code</label>
                            <input type="text" class="form-control" id="stateCode" placeholder="e.g., CA, TX" maxlength="10">
                            <div class="form-text">For US states</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="taxRate" class="form-label">Tax Rate (%) <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="taxRate" step="0.01" min="0.01" max="100" placeholder="e.g., 23.00" required>
                        <div class="form-text">Enter as percentage (e.g., 23 for 23%)</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" rows="2" placeholder="Optional description"></textarea>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isDefault">
                        <label class="form-check-label" for="isDefault">
                            Set as Default Tax Rate
                        </label>
                    </div>

                    <div class="mb-3 form-check" id="isActiveContainer" style="display: none;">
                        <input type="checkbox" class="form-check-input" id="isActive">
                        <label class="form-check-label" for="isActive">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveTaxRate()">
                    <i class="bi bi-stripe"></i> Save & Sync with Stripe
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let isEditMode = false;

        function showCreateTaxRateModal() {
            isEditMode = false;
            document.getElementById('taxRateModalTitle').textContent = 'Add Tax Rate';
            document.getElementById('taxRateForm').reset();
            document.getElementById('taxRateId').value = '';
            document.getElementById('isActiveContainer').style.display = 'none';
            new bootstrap.Modal(document.getElementById('taxRateModal')).show();
        }

        function editTaxRate(id) {
            isEditMode = true;
            const taxRates = @Html.Raw(Json.Serialize(Model.TaxRates));
            const taxRateData = taxRates.find(t => t.id === id);
            
            if (!taxRateData) return;

            document.getElementById('taxRateModalTitle').textContent = 'Edit Tax Rate';
            document.getElementById('taxRateId').value = taxRateData.id;
            document.getElementById('taxRateName').value = taxRateData.name;
            document.getElementById('countryCode').value = taxRateData.countryCode;
            document.getElementById('stateCode').value = taxRateData.stateCode || '';
            document.getElementById('taxRate').value = taxRateData.rate;
            document.getElementById('description').value = taxRateData.description || '';
            document.getElementById('isDefault').checked = taxRateData.isDefault;
            document.getElementById('isActiveContainer').style.display = 'block';
            document.getElementById('isActive').checked = taxRateData.isActive;

            new bootstrap.Modal(document.getElementById('taxRateModal')).show();
        }

        async function saveTaxRate() {
            const id = document.getElementById('taxRateId').value;
            const data = {
                name: document.getElementById('taxRateName').value,
                countryCode: document.getElementById('countryCode').value.toUpperCase(),
                stateCode: document.getElementById('stateCode').value.toUpperCase() || null,
                rate: parseFloat(document.getElementById('taxRate').value),
                description: document.getElementById('description').value,
                isDefault: document.getElementById('isDefault').checked,
                isActive: isEditMode ? document.getElementById('isActive').checked : true
            };

            try {
                const url = isEditMode ? `/Admin/UpdateTaxRate?id=${id}` : '/Admin/CreateTaxRate';
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('taxRateModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while saving the tax rate.');
            }
        }

        async function toggleTaxRate(id) {
            if (!confirm('Are you sure you want to toggle this tax rate status? This will also update Stripe.')) return;

            try {
                const response = await fetch(`/Admin/ToggleTaxRate?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while toggling the tax rate status.');
            }
        }

        async function setDefault(id) {
            if (!confirm('Are you sure you want to set this as the default tax rate?')) return;

            try {
                const response = await fetch(`/Admin/SetDefaultTaxRate?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while setting the default tax rate.');
            }
        }

        async function syncWithStripe(id) {
            if (!confirm('Sync this tax rate with Stripe?')) return;

            try {
                const response = await fetch(`/Admin/SyncTaxRateWithStripe?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('Tax rate synced successfully with Stripe!');
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while syncing with Stripe.');
            }
        }

        async function deleteTaxRate(id) {
            if (!confirm('Are you sure you want to delete this tax rate? This will also archive it in Stripe.')) return;

            try {
                const response = await fetch(`/Admin/DeleteTaxRate?id=${id}`, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the tax rate.');
            }
        }

        // Initialize DataTable
        $(document).ready(function() {
            $('#taxRatesTable').DataTable({
                order: [[0, 'desc']],
                pageLength: 25,
                responsive: true
            });
        });
    </script>
}
