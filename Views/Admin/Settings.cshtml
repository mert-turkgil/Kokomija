        // Toggle Maintenance Mode
        async function toggleMaintenanceMode(checkbox) {
            const isEnabled = checkbox.checked;
            const statusText = document.getElementById('maintenanceStatusText');
            
            // Show confirmation dialog
            let confirmMessage;
            if (isEnabled) {
                confirmMessage = 'Are you sure you want to ENABLE Maintenance Mode?\n\n' +
                                '‚ö†Ô∏è This will:\n' +
                                '‚Ä¢ Block all regular users from accessing the site\n' +
                                '‚Ä¢ Clear all shopping cart items\n' +
                                '‚Ä¢ Show maintenance page to visitors\n\n' +
                                'Only admins will be able to access the site.';
            } else {
                confirmMessage = 'Are you sure you want to DISABLE Maintenance Mode?\n\n' +
                                'The site will be accessible to all users again.';
            }
            
            if (!confirm(confirmMessage)) {
                checkbox.checked = !isEnabled;
                return;
            }
            
            // Show loading state
            checkbox.disabled = true;
            statusText.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
            
            try {
                let reason = null;
                let reopenHours = null;
                
                if (isEnabled) {
                    reason = prompt('Please enter a reason for maintenance (optional):');
                    if (reason === null) {
                        checkbox.checked = false;
                        checkbox.disabled = false;
                        statusText.textContent = 'Enable Maintenance Mode';
                        return;
                    }
                    
                    // Ask for reopen time in hours
                    const hoursInput = prompt('How many hours until site reopens? (Default: 24 hours)\nEnter 0 for indefinite maintenance:', '24');
                    if (hoursInput === null) {
                        checkbox.checked = false;
                        checkbox.disabled = false;
                        statusText.textContent = 'Enable Maintenance Mode';
                        return;
                    }
                    
                    reopenHours = parseInt(hoursInput) || 24;
                    if (reopenHours < 0) reopenHours = 24;
                }
                
                const response = await fetch('@Url.Action("ToggleMaintenanceMode", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        enable: isEnabled,
                        reason: reason,
                        reopenHours: reopenHours
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    checkbox.checked = result.isEnabled;
                    statusText.textContent = result.isEnabled ? 'Maintenance Mode Active' : 'Enable Maintenance Mode';
                    
                    let message = result.message;
                    if (result.scheduledReopen) {
                        message += '<br><small>Scheduled reopen: ' + result.scheduledReopen + '</small>';
                    }
                    
                    toastr.success(message, result.isEnabled ? 'üîí Maintenance Enabled' : '‚úÖ Maintenance Disabled', {
                        timeOut: 5000,
                        closeButton: true,
                        progressBar: true,
                        positionClass: 'toast-top-right',
                        escapeHtml: false
                    });
                    
                    // Reload page after 2 seconds to show/hide alert
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    checkbox.checked = !isEnabled;
                    statusText.textContent = !isEnabled ? 'Maintenance Mode Active' : 'Enable Maintenance Mode';
                    
                    toastr.error(result.message || 'Failed to toggle maintenance mode', 'Error', {
                        timeOut: 4000,
                        closeButton: true,
                        positionClass: 'toast-top-right'
                    });
                }
            } catch (error) {
                console.error('Error toggling maintenance mode:', error);
                checkbox.checked = !isEnabled;
                statusText.textContent = !isEnabled ? 'Maintenance Mode Active' : 'Enable Maintenance Mode';
                
                toastr.error('An error occurred while toggling maintenance mode', 'Error', {
                    timeOut: 4000,
                    closeButton: true,
                    positionClass: 'toast-top-right'
                });
            } finally {
                checkbox.disabled = false;
            }
        }

