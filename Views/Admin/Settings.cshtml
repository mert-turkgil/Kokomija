        // ================================
        function initializeCategoryDragAndDrop() {
            const categoriesTree = document.querySelector('.categories-tree');
            if (!categoriesTree) return;

            // Make main category list sortable
            new Sortable(categoriesTree, {
                animation: 150,
                handle: '.drag-handle',
                ghostClass: 'sortable-ghost',
                dragClass: 'sortable-drag',
                onEnd: async function(evt) {
                    const categoryId = evt.item.dataset.id;
                    const newIndex = evt.newIndex;
                    
                    await updateCategoryOrder(categoryId, newIndex, null);
                }
            });

            // Make each subcategory list sortable
            document.querySelectorAll('.subcategories').forEach(subcatContainer => {
                new Sortable(subcatContainer, {
                    animation: 150,
                    handle: '.drag-handle',
                    ghostClass: 'sortable-ghost',
                    dragClass: 'sortable-drag',
                    group: 'subcategories',
                    onEnd: async function(evt) {
                        const categoryId = evt.item.dataset.id;
                        const newParentId = evt.to.closest('.category-item')?.dataset.id;
                        const newIndex = evt.newIndex;
                        
                        await updateCategoryOrder(categoryId, newIndex, newParentId);
                    }
                });
            });
        }

