@model Kokomija.Models.ViewModels.Admin.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-people"></i>
                                User Management
                            </h1>
                            <p class="mb-0">Manage user accounts, permissions, and monitor user activity</p>
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-primary">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div>
                        <h6>@Model.TotalUsers</h6>
                        <small>Total Users</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-success">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div>
                        <h6>@Model.ActiveUsers</h6>
                        <small>Active Users</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-danger">
                        <i class="bi bi-shield-fill-exclamation"></i>
                    </div>
                    <div>
                        <h6>@Model.BannedUsers</h6>
                        <small>Banned Users</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-info">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <div>
                        <h6>@Model.NewUsersThisMonth</h6>
                        <small>New This Month</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-list"></i>
                                All Users
                            </h5>
                            <div class="d-flex gap-2">
                                <select class="form-select form-select-sm" id="statusFilter" style="width: auto;">
                                    <option value="">All Status</option>
                                    <option value="active">Active</option>
                                    <option value="banned">Banned</option>
                                </select>
                                <input type="text" class="form-control form-control-sm" id="searchUsers" placeholder="Search users..." style="width: 200px;">
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="usersTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Orders</th>
                                        <th>Reviews</th>
                                        <th>Joined</th>
                                        <th>Last Login</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr data-user-id="@user.Id" class="@(user.IsBanned ? "table-danger" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-2">
                                                        @(user.FullName.FirstOrDefault())
                                                    </div>
                                                    <div>
                                                        <strong>@user.FullName</strong>
                                                        @if (user.IsRoot)
                                                        {
                                                            <span class="badge bg-dark ms-2">
                                                                <i class="bi bi-shield-fill-check"></i> Root
                                                            </span>
                                                        }
                                                        else if (user.IsBanned)
                                                        {
                                                            <span class="badge bg-danger ms-2">
                                                                <i class="bi bi-shield-fill-exclamation"></i> Banned
                                                            </span>
                                                        }
                                                        @if (!user.EmailConfirmed)
                                                        {
                                                            <span class="badge bg-warning ms-2">
                                                                <i class="bi bi-exclamation-triangle"></i> Unverified
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @user.Email
                                            </td>
                                            <td>@(user.PhoneNumber ?? "-")</td>
                                            <td>
                                                @if (user.IsBanned)
                                                {
                                                    <span class="text-danger">
                                                        <i class="bi bi-x-circle-fill"></i> Banned
                                                        @if (user.BannedUntil.HasValue)
                                                        {
                                                            <small class="d-block text-muted">Until @user.BannedUntil.Value.ToString("MMM dd, yyyy")</small>
                                                        }
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Active
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@user.TotalOrders</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@user.TotalReviews</span>
                                            </td>
                                            <td>
                                                <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                @if (user.LastLogin.HasValue)
                                                {
                                                    <small>@user.LastLogin.Value.ToString("MMM dd, yyyy")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Never</small>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="UserEdit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    @if (!user.IsRoot)
                                                    {
                                                        @if (user.IsBanned)
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-success" onclick="unbanUser('@user.Id')" title="Unban">
                                                                <i class="bi bi-unlock"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="showBanModal('@user.Id', '@user.FullName')" title="Ban">
                                                                <i class="bi bi-shield-exclamation"></i>
                                                            </button>
                                                        }
                                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteUser('@user.Id', '@user.FullName')" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-secondary" disabled title="Root user - Protected">
                                                            <i class="bi bi-shield-fill-check"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ban User Modal -->
<div class="modal fade" id="banUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ban User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Ban user: <strong id="banUserName"></strong></p>
                <form id="banUserForm">
                    <input type="hidden" id="banUserId" />
                    <div class="mb-3">
                        <label class="form-label">Ban Duration</label>
                        <select class="form-select" id="banDays" required>
                            <option value="1">1 Day</option>
                            <option value="3">3 Days</option>
                            <option value="7" selected>7 Days</option>
                            <option value="30">30 Days</option>
                            <option value="90">90 Days</option>
                            <option value="365">1 Year</option>
                            <option value="3650">Permanent (10 Years)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason (Optional)</label>
                        <textarea class="form-control" id="banReason" rows="3" placeholder="Reason for banning this user..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmBan()">
                    <i class="bi bi-shield-exclamation"></i> Ban User
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        $('#searchUsers').on('keyup', function() {
            const value = $(this).val().toLowerCase();
            $('#usersTable tbody tr').filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        // Status filter
        $('#statusFilter').on('change', function() {
            const value = $(this).val();
            if (value === '') {
                $('#usersTable tbody tr').show();
            } else if (value === 'active') {
                $('#usersTable tbody tr').each(function() {
                    $(this).toggle(!$(this).hasClass('table-danger'));
                });
            } else if (value === 'banned') {
                $('#usersTable tbody tr').each(function() {
                    $(this).toggle($(this).hasClass('table-danger'));
                });
            }
        });

        // Show ban modal
        function showBanModal(userId, userName) {
            $('#banUserId').val(userId);
            $('#banUserName').text(userName);
            $('#banUserModal').modal('show');
        }

        // Confirm ban
        function confirmBan() {
            const userId = $('#banUserId').val();
            const days = $('#banDays').val();
            
            $.ajax({
                url: '@Url.Action("UserBan")',
                type: 'POST',
                data: {
                    id: userId,
                    days: days,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error banning user');
                }
            });
        }

        // Unban user
        function unbanUser(userId) {
            if (!confirm('Are you sure you want to unban this user?')) return;

            $.ajax({
                url: '@Url.Action("UserUnban")',
                type: 'POST',
                data: {
                    id: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error unbanning user');
                }
            });
        }

        // Delete user
        function deleteUser(userId, userName) {
            if (!confirm('Are you sure you want to DELETE user "' + userName + '"? This action cannot be undone!')) return;

            $.ajax({
                url: '@Url.Action("UserDelete")',
                type: 'POST',
                data: {
                    id: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error deleting user');
                }
            });
        }
    </script>

    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
            text-transform: uppercase;
        }

        .stat-card-small {
            background: white;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .stat-icon-small {
            width: 50px;
            height: 50px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
        }

        .stat-card-small h6 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
            color: #333;
        }

        .stat-card-small small {
            color: #666;
            font-size: 14px;
        }
    </style>

    <form id="antiforgerForm" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
}
