@model Kokomija.Models.ViewModels.Admin.OrderManagementViewModel
@{
    ViewData["Title"] = "Order Management";
}

@section Styles {
    <style>
        /* ===== CSS Variables for Light/Dark Theme ===== */
        :root {
            --ord-bg: #f8fafc;
            --ord-card-bg: #ffffff;
            --ord-card-border: rgba(0,0,0,0.05);
            --ord-card-shadow: 0 4px 15px rgba(0,0,0,0.08);
            --ord-text-primary: #1a1a2e;
            --ord-text-secondary: #64748b;
            --ord-text-muted: #94a3b8;
        }

        [data-bs-theme="dark"] {
            --ord-bg: #0f172a;
            --ord-card-bg: #1e293b;
            --ord-card-border: rgba(255,255,255,0.1);
            --ord-card-shadow: 0 4px 15px rgba(0,0,0,0.3);
            --ord-text-primary: #f1f5f9;
            --ord-text-secondary: #94a3b8;
            --ord-text-muted: #64748b;
        }

        .orders-page {
            background: var(--ord-bg);
            min-height: 100vh;
        }

        /* ===== Stat Cards - Horizontal Modern Layout ===== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .stat-card {
            background: var(--ord-card-bg);
            border-radius: 16px;
            padding: 1.25rem;
            box-shadow: var(--ord-card-shadow);
            border: 1px solid var(--ord-card-border);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .stat-card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transform: translateY(-3px);
        }

        .stat-card.clickable {
            cursor: pointer;
        }
        
        .stat-icon {
            width: 52px;
            height: 52px;
            min-width: 52px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-content {
            flex: 1;
            min-width: 0;
        }
        
        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            color: var(--ord-text-primary);
            line-height: 1.2;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .stat-label {
            font-size: 0.75rem;
            color: var(--ord-text-secondary);
            margin: 0.25rem 0 0 0;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-meta {
            font-size: 0.7rem;
            color: var(--ord-text-muted);
            margin-top: 0.25rem;
        }

        .stat-link {
            font-size: 0.7rem;
            color: #3b82f6;
            font-weight: 600;
        }

        /* ===== Other Components ===== */
        .order-table-wrapper {
            background: var(--ord-card-bg);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--ord-card-shadow);
            border: 1px solid var(--ord-card-border);
        }
        
        .filter-card {
            background: var(--ord-card-bg);
            border-radius: 16px;
            padding: 1.25rem;
            box-shadow: var(--ord-card-shadow);
            border: 1px solid var(--ord-card-border);
            margin-bottom: 1.5rem;
        }
        
        .status-badge {
            padding: 0.35rem 0.75rem;
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .status-pending { background: #fff3cd; color: #856404; }
        .status-processing { background: #cfe2ff; color: #084298; }
        .status-shipped { background: #d1e7dd; color: #0f5132; }
        .status-delivered { background: #d1e7dd; color: #0a3622; }
        .status-cancelled { background: #f8d7da; color: #842029; }
        
        .payment-paid { background: #d1e7dd; color: #0f5132; }
        .payment-pending { background: #fff3cd; color: #856404; }
        .payment-failed { background: #f8d7da; color: #842029; }
        .payment-refunded { background: #e2e3e5; color: #41464b; }
        
        .shipment-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        .return-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.5rem;
            background: #fff3cd;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            color: #856404;
        }
        
        .tracking-number {
            font-family: 'Courier New', monospace;
            background: var(--ord-card-border);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
        }


        .table {
            color: var(--ord-text-primary);
        }

        .table thead th {
            background: var(--ord-bg);
            color: var(--ord-text-secondary);
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            border: none;
        }

        .table tbody td {
            border-color: var(--ord-card-border);
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background: var(--ord-bg);
        }

        /* ===== Responsive ===== */
        @@media (max-width: 1200px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .stat-card {
                padding: 1rem;
            }

            .stat-value {
                font-size: 1.25rem;
            }

            .stat-icon {
                width: 44px;
                height: 44px;
                min-width: 44px;
                font-size: 20px;
            }
        }

        /* Dark mode table */
        [data-bs-theme="dark"] .table-light {
            background: var(--ord-card-bg) !important;
        }

        [data-bs-theme="dark"] .form-control,
        [data-bs-theme="dark"] .form-select {
            background: var(--ord-card-bg);
            border-color: var(--ord-card-border);
            color: var(--ord-text-primary);
        }

        /* Dark mode dropdown styling */
        [data-bs-theme="dark"] .dropdown-menu {
            background: var(--ord-card-bg);
            border-color: var(--ord-card-border);
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
        }

        [data-bs-theme="dark"] .dropdown-item {
            color: var(--ord-text-primary);
        }

        [data-bs-theme="dark"] .dropdown-item:hover,
        [data-bs-theme="dark"] .dropdown-item:focus {
            background: var(--ord-bg);
            color: var(--ord-text-primary);
        }

        [data-bs-theme="dark"] .dropdown-item.text-success {
            color: #34d399 !important;
        }

        [data-bs-theme="dark"] .dropdown-item.text-danger {
            color: #f87171 !important;
        }

        [data-bs-theme="dark"] .dropdown-divider {
            border-color: var(--ord-card-border);
        }

        [data-bs-theme="dark"] .btn-light {
            background: rgba(255,255,255,0.1);
            border-color: rgba(255,255,255,0.2);
            color: #fff;
        }

        [data-bs-theme="dark"] .btn-light:hover {
            background: rgba(255,255,255,0.2);
            border-color: rgba(255,255,255,0.3);
            color: #fff;
        }

        /* Modal styling for dark mode */
        [data-bs-theme="dark"] .modal-content {
            background: var(--ord-card-bg);
            border-color: var(--ord-card-border);
        }

        [data-bs-theme="dark"] .modal-header,
        [data-bs-theme="dark"] .modal-footer {
            border-color: var(--ord-card-border);
        }

        [data-bs-theme="dark"] .btn-close {
            filter: invert(1);
        }

        /* Demo Modal Styles */
        .demo-modal .modal-content {
            border: none;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.25);
        }

        .demo-modal .modal-body {
            padding: 2rem;
        }

        .confirm-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

        .confirm-icon.success {
            background: rgba(16, 185, 129, 0.15);
        }

        .confirm-icon.success i {
            font-size: 2.5rem;
            color: #10b981;
        }

        .confirm-icon.danger {
            background: rgba(239, 68, 68, 0.15);
        }

        .confirm-icon.danger i {
            font-size: 2.5rem;
            color: #ef4444;
        }

        .confirm-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--ord-text-primary);
            margin-bottom: 0.75rem;
        }

        .confirm-text {
            color: var(--ord-text-secondary);
            margin-bottom: 1.5rem;
        }

        .confirm-features {
            background: var(--ord-bg);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .confirm-feature {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
            color: var(--ord-text-primary);
            font-size: 0.875rem;
        }

        .confirm-feature i {
            color: #10b981;
            font-size: 1rem;
        }

        .confirm-feature i.text-danger {
            color: #ef4444 !important;
        }

        /* Loading overlay */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            backdrop-filter: blur(4px);
        }

        .loading-overlay.active {
            display: flex;
        }

        .loading-card {
            background: var(--ord-card-bg);
            border-radius: 20px;
            padding: 2rem 3rem;
            text-align: center;
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
        }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid var(--ord-card-border);
            border-top: 4px solid #8b5cf6;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-text {
            color: var(--ord-text-primary);
            font-weight: 600;
        }
    </style>
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-bag-check"></i>
                                Order Management
                            </h1>
                            <p class="mb-0">View and manage all customer orders with tracking and returns</p>
                        </div>
                        <div class="d-flex gap-2">
                            <div class="dropdown">
                                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                    <i class="bi bi-database-fill-gear"></i> Demo Data
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg" style="position: absolute; z-index: 1100;">
                                    <li class="px-3 py-2">
                                        <small class="text-muted fw-semibold text-uppercase">Demo Order Management</small>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button class="dropdown-item py-2" type="button" onclick="showAddModal()">
                                            <i class="bi bi-plus-circle text-success me-2"></i>
                                            <span class="text-success fw-semibold">Generate Demo Orders</span>
                                        </button>
                                    </li>
                                    <li>
                                        <button class="dropdown-item py-2" type="button" onclick="showRemoveModal()">
                                            <i class="bi bi-trash3 text-danger me-2"></i>
                                            <span class="text-danger fw-semibold">Remove Demo Orders</span>
                                        </button>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="px-3 py-2">
                                        <small class="text-muted">
                                            <i class="bi bi-info-circle me-1"></i>
                                            Demo orders include returns for testing
                                        </small>
                                    </li>
                                </ul>
                            </div>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="bi bi-arrow-left"></i>
                                Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <a href="@Url.Action("Orders", new { status = "" })" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #e8f5e9;">
                            <i class="bi bi-bag-check-fill" style="color: #4caf50;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.TotalOrders</h3>
                            <p class="stat-label">Total Orders</p>
                            <small class="stat-meta">@Model.Statistics.DeliveredOrders Delivered</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <a href="@Url.Action("Orders", new { status = "Pending" })" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #fff3e0;">
                            <i class="bi bi-clock-history" style="color: #ff9800;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.PendingOrders</h3>
                            <p class="stat-label">Pending Orders</p>
                            <small class="stat-meta">@Model.Statistics.ProcessingOrders Processing</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <a asp-action="Financial" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #e3f2fd;">
                            <i class="bi bi-currency-dollar" style="color: #2196f3;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.TotalRevenue.ToString("N0")<small class="text-muted fs-6">PLN</small></h3>
                            <p class="stat-label">Gross Revenue</p>
                            <small class="stat-meta">@Model.Statistics.MonthRevenue.ToString("N0") PLN This Month</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#shipmentManagementModal">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #fce4ec;">
                            <i class="bi bi-truck" style="color: #e91e63;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.AwaitingShipment</h3>
                            <p class="stat-label">Awaiting Shipment</p>
                            <small class="stat-meta">@Model.Statistics.ShippedOrders Shipped</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Additional Stats Row -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <a asp-action="Financial" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #f3e5f5;">
                            <i class="bi bi-graph-up-arrow" style="color: #9c27b0;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.AverageOrderValue.ToString("N2")<small class="text-muted fs-6">PLN</small></h3>
                            <p class="stat-label">Average Order Value</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <a asp-action="Financial" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #e0f2f1;">
                            <i class="bi bi-calendar-day" style="color: #009688;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.TodayRevenue.ToString("N0")<small class="text-muted fs-6">PLN</small></h3>
                            <p class="stat-label">Today's Revenue</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <a asp-action="ReturnRequests" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #fff3e0;">
                            <i class="bi bi-arrow-return-left" style="color: #ff9800;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.PendingReturns</h3>
                            <p class="stat-label">Pending Returns</p>
                            <small class="stat-link">Click to manage →</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <a href="@Url.Action("Orders", new { status = "Cancelled" })" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #ffebee;">
                            <i class="bi bi-x-circle" style="color: #f44336;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.CancelledOrders</h3>
                            <p class="stat-label">Cancelled Orders</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <form method="get" asp-action="Orders" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" class="form-control" 
                               placeholder="Order #, Customer..." value="@Model.SearchQuery">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Order Status</label>
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="pending" selected="@(Model.StatusFilter == "pending")">Pending</option>
                            <option value="processing" selected="@(Model.StatusFilter == "processing")">Processing</option>
                            <option value="shipped" selected="@(Model.StatusFilter == "shipped")">Shipped</option>
                            <option value="delivered" selected="@(Model.StatusFilter == "delivered")">Delivered</option>
                            <option value="cancelled" selected="@(Model.StatusFilter == "cancelled")">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Payment Status</label>
                        <select name="paymentStatus" class="form-select">
                            <option value="">All Payments</option>
                            <option value="pending" selected="@(Model.PaymentStatusFilter == "pending")">Pending</option>
                            <option value="paid" selected="@(Model.PaymentStatusFilter == "paid")">Paid</option>
                            <option value="failed" selected="@(Model.PaymentStatusFilter == "failed")">Failed</option>
                            <option value="refunded" selected="@(Model.PaymentStatusFilter == "refunded")">Refunded</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date From</label>
                        <input type="date" name="dateFrom" class="form-control" 
                               value="@Model.DateFrom?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date To</label>
                        <input type="date" name="dateTo" class="form-control" 
                               value="@Model.DateTo?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.StatusFilter) || 
                     !string.IsNullOrEmpty(Model.PaymentStatusFilter) || Model.DateFrom.HasValue || Model.DateTo.HasValue)
                {
                    <div class="mt-2">
                        <a asp-action="Orders" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear Filters
                        </a>
                    </div>
                }
            </form>
        </div>

        <!-- Orders Table -->
        <div class="order-table-wrapper">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">
                    <i class="bi bi-list-ul"></i>
                    Orders (@Model.TotalOrders)
                </h4>
                <div>
                    <span class="text-muted">Page @Model.CurrentPage of @Model.TotalPages</span>
                </div>
            </div>

            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Payment</th>
                                <th>Shipping</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr class="@(order.IsDemoOrder ? "table-light" : "")">
                                    <td>
                                        @if (order.IsDemoOrder)
                                        {
                                            <span class="fw-bold text-muted" title="Demo order - No Stripe data available">
                                                @order.OrderNumber
                                            </span>
                                            <br>
                                            <span class="badge bg-warning text-dark" style="font-size: 0.65rem;">
                                                <i class="bi bi-cone-striped"></i> DEMO
                                            </span>
                                        }
                                        else
                                        {
                                            <a asp-action="OrderDetails" asp-route-id="@order.Id" class="fw-bold text-decoration-none">
                                                @order.OrderNumber
                                            </a>
                                        }
                                        @if (order.HasActiveReturn)
                                        {
                                            <br>
                                            <span class="return-indicator">
                                                <i class="bi bi-arrow-return-left"></i>
                                                @order.ActiveReturnCount Return@(order.ActiveReturnCount > 1 ? "s" : "")
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="fw-semibold @(order.IsDemoOrder ? "text-muted" : "")">@order.CustomerName</div>
                                        <small class="text-muted">@order.CustomerEmail</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@order.ItemCount item@(order.ItemCount > 1 ? "s" : "")</span>
                                    </td>
                                    <td class="fw-bold @(order.IsDemoOrder ? "text-muted" : "")">@order.TotalAmount.ToString("N2") @order.Currency</td>
                                    <td>
                                        <span class="status-badge status-@order.OrderStatus">
                                            @order.OrderStatus
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge payment-@order.PaymentStatus">
                                            @order.PaymentStatus
                                        </span>
                                    </td>
                                    <td>
