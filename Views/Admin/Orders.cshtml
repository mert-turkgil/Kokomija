                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" 
                                       asp-action="Orders" 
                                       asp-route-page="@i"
                                       asp-route-search="@Model.SearchQuery"
                                       asp-route-status="@Model.StatusFilter"
