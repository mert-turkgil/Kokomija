                        @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.StatusFilter))
                        {
                            <span>Try adjusting your filters or search query</span>
                        }
                        else
                        {
                            <span>Orders will appear here once customers start purchasing</span>
                        }
                    </p>
                </div>
            }
        </div>
    </div>
</div>

