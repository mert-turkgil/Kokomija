@section Scripts {
    <script>
        // Modal instances
        let addModal, removeModal, shipmentModal, trackModal, createShipmentModal;

        $(document).ready(function() {
            // Initialize modals
            addModal = new bootstrap.Modal(document.getElementById('addDemoModal'));
            removeModal = new bootstrap.Modal(document.getElementById('removeDemoModal'));
            shipmentModal = new bootstrap.Modal(document.getElementById('shipmentManagementModal'));
            trackModal = new bootstrap.Modal(document.getElementById('trackShipmentModal'));
            createShipmentModal = new bootstrap.Modal(document.getElementById('createShipmentModal'));

            // Load shipment data when modal opens
            document.getElementById('shipmentManagementModal').addEventListener('show.bs.modal', function() {
                loadCarrierStatuses();
                loadAwaitingShipments();
                loadShippingProviders();
            });

            // Fix dropdown in welcome-card with overflow:hidden
            // Move dropdown menu to body when shown to escape overflow clipping
            document.querySelectorAll('.welcome-card .dropdown').forEach(function(dropdown) {
                dropdown.addEventListener('shown.bs.dropdown', function(e) {
                    const menu = this.querySelector('.dropdown-menu');
                    if (menu) {
                        const rect = menu.getBoundingClientRect();
                        menu.style.position = 'fixed';
                        menu.style.top = rect.top + 'px';
                        menu.style.left = (rect.left - menu.offsetWidth + this.querySelector('.dropdown-toggle').offsetWidth) + 'px';
                        menu.style.transform = 'none';
                    }
                });
            });

            // Auto-submit form on filter change
            $('#filterForm select').on('change', function() {
                $('#filterForm').submit();
            });
        });

        function showAddModal() {
            addModal.show();
        }

        function showRemoveModal() {
            removeModal.show();
        }

        function showLoading(text) {
            document.getElementById('loadingText').textContent = text;
            document.getElementById('loadingOverlay').classList.add('active');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }

        async function seedDemoData() {
            addModal.hide();
            showLoading('Generating demo orders... This may take a moment.');
            
            try {
                const response = await fetch('@Url.Action("SeedDemoData")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                hideLoading();
                
                if (data.success) {
                    showToast('success', 'Success!', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('danger', 'Error', data.message);
                }
            } catch (error) {
                hideLoading();
                showToast('danger', 'Error', 'An error occurred while generating demo data.');
                console.error(error);
            }
        }

        async function removeDemoData() {
            removeModal.hide();
            showLoading('Removing demo orders...');
            
            try {
                const response = await fetch('@Url.Action("RemoveDemoData")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                hideLoading();
                
                if (data.success) {
                    showToast('success', 'Success!', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('danger', 'Error', data.message);
                }
            } catch (error) {
                hideLoading();
                showToast('danger', 'Error', 'An error occurred while removing demo data.');
                console.error(error);
            }
        }

        function showToast(type, title, message) {
            // Create toast container if it doesn't exist
            let container = document.querySelector('.toast-container');
            if (!container) {
                container = document.createElement('div');
                container.className = 'toast-container position-fixed top-0 end-0 p-3';
                container.style.zIndex = '10000';
                document.body.appendChild(container);
            }

            const toastId = 'toast-' + Date.now();
            const bgClass = type === 'success' ? 'bg-success' : 'bg-danger';
            const icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill';

            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-white ${bgClass} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body d-flex align-items-center gap-2">
                            <i class="bi ${icon}"></i>
                            <div>
                                <strong>${title}</strong><br>
                                <small>${message}</small>
                            </div>
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', toastHtml);
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { autohide: true, delay: 5000 });
            toast.show();

            // Remove toast element after it hides
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }
    </script>
}
