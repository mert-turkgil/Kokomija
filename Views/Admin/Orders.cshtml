                                <a class="page-link" 
                                   asp-action="Orders" 
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-search="@Model.SearchQuery"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                   asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                   asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

