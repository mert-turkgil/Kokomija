@model Kokomija.Models.ViewModels.Admin.OrderManagementViewModel
@{
    ViewData["Title"] = "Order Management";
}

@section Styles {
    <style>
        /* ===== CSS Variables for Light/Dark Theme ===== */
        :root {
            --ord-bg: #f8fafc;
            --ord-card-bg: #ffffff;
            --ord-card-border: rgba(0,0,0,0.05);
            --ord-card-shadow: 0 4px 15px rgba(0,0,0,0.08);
            --ord-text-primary: #1a1a2e;
            --ord-text-secondary: #64748b;
            --ord-text-muted: #94a3b8;
        }

        [data-bs-theme="dark"] {
            --ord-bg: #0f172a;
            --ord-card-bg: #1e293b;
            --ord-card-border: rgba(255,255,255,0.1);
            --ord-card-shadow: 0 4px 15px rgba(0,0,0,0.3);
            --ord-text-primary: #f1f5f9;
            --ord-text-secondary: #94a3b8;
            --ord-text-muted: #64748b;
        }

        .orders-page {
            background: var(--ord-bg);
            min-height: 100vh;
        }

        /* ===== Stat Cards - Horizontal Modern Layout ===== */
        .stat-card {
            background: var(--ord-card-bg);
            border-radius: 16px;
            padding: 1.25rem;
            box-shadow: var(--ord-card-shadow);
            border: 1px solid var(--ord-card-border);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .stat-card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transform: translateY(-3px);
        }

        .stat-card.clickable {
            cursor: pointer;
        }
        
        .stat-icon {
            width: 52px;
            height: 52px;
            min-width: 52px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-content {
            flex: 1;
            min-width: 0;
        }
        
        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            color: var(--ord-text-primary);
            line-height: 1.2;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .stat-label {
            font-size: 0.75rem;
            color: var(--ord-text-secondary);
            margin: 0.25rem 0 0 0;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-meta {
            font-size: 0.7rem;
            color: var(--ord-text-muted);
            margin-top: 0.25rem;
        }

        .stat-link {
            font-size: 0.7rem;
            color: #3b82f6;
            font-weight: 600;
        }

        /* ===== Other Components ===== */
        .order-table-wrapper {
            background: var(--ord-card-bg);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--ord-card-shadow);
            border: 1px solid var(--ord-card-border);
        }
        
        .filter-card {
            background: var(--ord-card-bg);
            border-radius: 16px;
            padding: 1.25rem;
            box-shadow: var(--ord-card-shadow);
            border: 1px solid var(--ord-card-border);
            margin-bottom: 1.5rem;
        }
        
        .status-badge {
            padding: 0.35rem 0.75rem;
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .status-pending { background: #fff3cd; color: #856404; }
        .status-processing { background: #cfe2ff; color: #084298; }
        .status-shipped { background: #d1e7dd; color: #0f5132; }
        .status-delivered { background: #d1e7dd; color: #0a3622; }
        .status-cancelled { background: #f8d7da; color: #842029; }
        
        .payment-paid { background: #d1e7dd; color: #0f5132; }
        .payment-pending { background: #fff3cd; color: #856404; }
        .payment-failed { background: #f8d7da; color: #842029; }
        .payment-refunded { background: #e2e3e5; color: #41464b; }
        
        .shipment-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        .return-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.5rem;
            background: #fff3cd;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            color: #856404;
        }
        
        .tracking-number {
            font-family: 'Courier New', monospace;
            background: var(--ord-card-border);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
        }

        .welcome-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 16px;
            padding: 1.5rem 2rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 8px 24px rgba(102, 126, 234, 0.25);
        }
        
        .welcome-card h1 {
            color: white;
            margin-bottom: 0.25rem;
            font-weight: 700;
            font-size: 1.5rem;
        }
        
        .welcome-card p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0;
            font-size: 0.9rem;
        }

        .table {
            color: var(--ord-text-primary);
        }

        .table thead th {
            background: var(--ord-bg);
            color: var(--ord-text-secondary);
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            border: none;
        }

        .table tbody td {
            border-color: var(--ord-card-border);
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background: var(--ord-bg);
        }

        /* ===== Responsive ===== */
        @@media (max-width: 768px) {
            .stat-card {
                padding: 1rem;
            }

            .stat-value {
                font-size: 1.25rem;
            }

            .stat-icon {
                width: 44px;
                height: 44px;
                min-width: 44px;
                font-size: 20px;
            }

            .welcome-card {
                padding: 1.25rem;
            }

            .welcome-card h1 {
                font-size: 1.25rem;
            }
        }

        /* Dark mode table */
        [data-bs-theme="dark"] .table-light {
            background: var(--ord-card-bg) !important;
        }

        [data-bs-theme="dark"] .form-control,
        [data-bs-theme="dark"] .form-select {
            background: var(--ord-card-bg);
            border-color: var(--ord-card-border);
            color: var(--ord-text-primary);
        }
    </style>
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-bag-check"></i>
                                Order Management
                            </h1>
                            <p class="mb-0">View and manage all customer orders with tracking and returns</p>
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="bi bi-arrow-left"></i>
                                Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #e8f5e9;">
                        <i class="bi bi-bag-check-fill" style="color: #4caf50;"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">@Model.Statistics.TotalOrders</h3>
                        <p class="stat-label">Total Orders</p>
                        <small class="text-muted">@Model.Statistics.DeliveredOrders Delivered</small>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #fff3e0;">
                        <i class="bi bi-clock-history" style="color: #ff9800;"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">@Model.Statistics.PendingOrders</h3>
                        <p class="stat-label">Pending Orders</p>
                        <small class="text-muted">@Model.Statistics.ProcessingOrders Processing</small>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <a asp-action="Financial" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #e3f2fd;">
                            <i class="bi bi-currency-dollar" style="color: #2196f3;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.TotalRevenue.ToString("N0") PLN</h3>
                            <p class="stat-label">Gross Revenue</p>
                            <small class="text-muted">@Model.Statistics.MonthRevenue.ToString("N0") PLN This Month</small>
                            <small class="text-primary d-block mt-1">Click for detailed breakdown →</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #fce4ec;">
                        <i class="bi bi-truck" style="color: #e91e63;"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">@Model.Statistics.AwaitingShipment</h3>
                        <p class="stat-label">Awaiting Shipment</p>
                        <small class="text-muted">@Model.Statistics.ShippedOrders Shipped</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Stats Row -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #f3e5f5;">
                        <i class="bi bi-graph-up-arrow" style="color: #9c27b0;"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">@Model.Statistics.AverageOrderValue.ToString("N2") PLN</h3>
                        <p class="stat-label">Average Order Value</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #e0f2f1;">
                        <i class="bi bi-calendar-day" style="color: #009688;"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">@Model.Statistics.TodayRevenue.ToString("N0") PLN</h3>
                        <p class="stat-label">Today's Revenue</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <a asp-action="ReturnRequests" class="text-decoration-none">
                    <div class="stat-card clickable">
                        <div class="stat-icon" style="background: #fff3e0;">
                            <i class="bi bi-arrow-return-left" style="color: #ff9800;"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">@Model.Statistics.PendingReturns</h3>
                            <p class="stat-label">Pending Returns</p>
                            <small class="text-primary">Click to manage →</small>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #ffebee;">
                        <i class="bi bi-x-circle" style="color: #f44336;"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">@Model.Statistics.CancelledOrders</h3>
                        <p class="stat-label">Cancelled Orders</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <form method="get" asp-action="Orders" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" class="form-control" 
                               placeholder="Order #, Customer..." value="@Model.SearchQuery">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Order Status</label>
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="pending" selected="@(Model.StatusFilter == "pending")">Pending</option>
                            <option value="processing" selected="@(Model.StatusFilter == "processing")">Processing</option>
                            <option value="shipped" selected="@(Model.StatusFilter == "shipped")">Shipped</option>
                            <option value="delivered" selected="@(Model.StatusFilter == "delivered")">Delivered</option>
                            <option value="cancelled" selected="@(Model.StatusFilter == "cancelled")">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Payment Status</label>
                        <select name="paymentStatus" class="form-select">
                            <option value="">All Payments</option>
                            <option value="pending" selected="@(Model.PaymentStatusFilter == "pending")">Pending</option>
                            <option value="paid" selected="@(Model.PaymentStatusFilter == "paid")">Paid</option>
                            <option value="failed" selected="@(Model.PaymentStatusFilter == "failed")">Failed</option>
                            <option value="refunded" selected="@(Model.PaymentStatusFilter == "refunded")">Refunded</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date From</label>
                        <input type="date" name="dateFrom" class="form-control" 
                               value="@Model.DateFrom?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date To</label>
                        <input type="date" name="dateTo" class="form-control" 
                               value="@Model.DateTo?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.StatusFilter) || 
                     !string.IsNullOrEmpty(Model.PaymentStatusFilter) || Model.DateFrom.HasValue || Model.DateTo.HasValue)
                {
                    <div class="mt-2">
                        <a asp-action="Orders" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear Filters
                        </a>
                    </div>
                }
            </form>
        </div>

        <!-- Orders Table -->
        <div class="order-table-wrapper">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">
                    <i class="bi bi-list-ul"></i>
                    Orders (@Model.TotalOrders)
                </h4>
                <div>
                    <span class="text-muted">Page @Model.CurrentPage of @Model.TotalPages</span>
                </div>
            </div>

            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Payment</th>
                                <th>Shipping</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr class="@(order.IsDemoOrder ? "table-light" : "")">
                                    <td>
                                        @if (order.IsDemoOrder)
                                        {
                                            <span class="fw-bold text-muted" title="Demo order - No Stripe data available">
                                                @order.OrderNumber
                                            </span>
                                            <br>
                                            <span class="badge bg-warning text-dark" style="font-size: 0.65rem;">
                                                <i class="bi bi-cone-striped"></i> DEMO
                                            </span>
                                        }
                                        else
                                        {
                                            <a asp-action="OrderDetails" asp-route-id="@order.Id" class="fw-bold text-decoration-none">
                                                @order.OrderNumber
                                            </a>
                                        }
                                        @if (order.HasActiveReturn)
                                        {
                                            <br>
                                            <span class="return-indicator">
                                                <i class="bi bi-arrow-return-left"></i>
                                                @order.ActiveReturnCount Return@(order.ActiveReturnCount > 1 ? "s" : "")
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="fw-semibold @(order.IsDemoOrder ? "text-muted" : "")">@order.CustomerName</div>
                                        <small class="text-muted">@order.CustomerEmail</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@order.ItemCount item@(order.ItemCount > 1 ? "s" : "")</span>
                                    </td>
                                    <td class="fw-bold @(order.IsDemoOrder ? "text-muted" : "")">@order.TotalAmount.ToString("N2") @order.Currency</td>
                                    <td>
                                        <span class="status-badge status-@order.OrderStatus">
                                            @order.OrderStatus
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge payment-@order.PaymentStatus">
                                            @order.PaymentStatus
                                        </span>
                                    </td>
                                    <td>
                                        @if (order.HasShipment)
                                        {
                                            @if (!string.IsNullOrEmpty(order.TrackingNumber))
                                            {
                                                <div class="tracking-number mb-1">@order.TrackingNumber</div>
                                            }
                                            <span class="shipment-badge bg-info text-white">
                                                <i class="bi bi-truck"></i>
                                                @order.ShipmentStatus
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No shipment</span>
                                        }
                                    </td>
                                    <td>
                                        <div>@order.CreatedAt.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@order.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="quick-actions">
                                            @if (order.IsDemoOrder)
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" disabled title="Demo data - No Stripe details">
                                                    <i class="bi bi-eye-slash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <a asp-action="OrderDetails" asp-route-id="@order.Id" 
                                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-action="Orders" 
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-search="@Model.SearchQuery"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                   asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                   asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" 
                                       asp-action="Orders" 
                                       asp-route-page="@i"
                                       asp-route-search="@Model.SearchQuery"
                                       asp-route-status="@Model.StatusFilter"
                                       asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                       asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                       asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-action="Orders" 
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-search="@Model.SearchQuery"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                   asp-route-dateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                                   asp-route-dateTo="@Model.DateTo?.ToString("yyyy-MM-dd")">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 64px; color: #6c757d; opacity: 0.3;"></i>
                    <h4 class="mt-3">No Orders Found</h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.StatusFilter))
                        {
                            <span>Try adjusting your filters or search query</span>
                        }
                        else
                        {
                            <span>Orders will appear here once customers start purchasing</span>
                        }
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form on filter change
            $('#filterForm select').on('change', function() {
                $('#filterForm').submit();
            });
        });
    </script>
}
