@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="account-page">
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <div class="account-card welcome-card">
                    <h1>
                        <i class="bi bi-speedometer2"></i>
                        Admin Dashboard
                    </h1>
                    <p class="text-muted mb-0">Welcome to the Kokomija admin panel</p>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon bg-primary">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">0</h3>
                        <p class="stat-label">Total Users</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon bg-success">
                        <i class="bi bi-bag-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">0</h3>
                        <p class="stat-label">Total Orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon bg-warning">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">0</h3>
                        <p class="stat-label">Products</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <div class="stat-icon bg-info">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">$0</h3>
                        <p class="stat-label">Revenue</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Actions -->
        <div class="row">
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="account-card">
                    <h5>
                        <i class="bi bi-people"></i>
                        User Management
                    </h5>
                    <p class="text-muted">Manage customer accounts and roles</p>
                    <a asp-action="Users" class="btn btn-outline-primary">
                        Manage Users
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-3">
                <div class="account-card">
                    <h5>
                        <i class="bi bi-box-seam"></i>
                        Product Management
                    </h5>
                    <p class="text-muted">Add, edit, and manage products</p>
                    <a asp-action="Products" class="btn btn-outline-primary">
                        Manage Products
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-3">
                <div class="account-card">
                    <h5>
                        <i class="bi bi-bag-check"></i>
                        Order Management
                    </h5>
                    <p class="text-muted">View and process orders</p>
                    <a asp-action="Orders" class="btn btn-outline-primary">
                        Manage Orders
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-3">
                <div class="account-card">
                    <h5>
                        <i class="bi bi-gear"></i>
                        Site Settings
                    </h5>
                    <p class="text-muted">Configure site settings and preferences</p>
                    <a asp-action="Settings" class="btn btn-outline-primary">
                        Settings
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-3">
                <div class="account-card">
                    <h5>
                        <i class="bi bi-graph-up"></i>
                        Analytics
                    </h5>
                    <p class="text-muted">View sales and traffic reports</p>
                    <button class="btn btn-outline-secondary" disabled>
                        Coming Soon
                    </button>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-3">
                <div class="account-card">
                    <h5>
                        <i class="bi bi-house"></i>
                        Back to Store
                    </h5>
                    <p class="text-muted">Return to the main website</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                        View Store
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
