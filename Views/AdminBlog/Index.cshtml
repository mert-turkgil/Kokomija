@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
    <script src="~/lib/datatables/dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables/responsive.bootstrap5.min.js"></script>
    <script>
        // Configure toastr
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // Initialize DataTable
        let table;
        $(document).ready(function() {
            table = $('#blogsTable').DataTable({
                "responsive": {
                    "details": {
                        "type": 'column',
                        "target": 'tr'
                    }
                },
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "order": [[6, "desc"]], // Sort by published date by default
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ blog posts",
                    "infoEmpty": "No blog posts available",
                    "infoFiltered": "(filtered from _MAX_ total posts)",
                    "paginate": {
                        "first": '<i class="bi bi-chevron-double-left"></i>',
                        "last": '<i class="bi bi-chevron-double-right"></i>',
                        "next": '<i class="bi bi-chevron-right"></i>',
                        "previous": '<i class="bi bi-chevron-left"></i>'
                    },
                    "emptyTable": `
                        <div class="empty-state">
                            <i class="bi bi-journal-text" style="font-size: 3rem; color: #ccc;"></i>
                            <h5 class="mt-3 text-muted">No blog posts found</h5>
                            <p class="text-muted">Try adjusting your search or filters</p>
                        </div>
                    `,
                    "zeroRecords": `
                        <div class="empty-state">
                            <i class="bi bi-search" style="font-size: 3rem; color: #ccc;"></i>
                            <h5 class="mt-3 text-muted">No matching blog posts</h5>
                            <p class="text-muted">Try different search terms or filters</p>
                        </div>
                    `
                },
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": [0, 7] // Disable sorting for Image and Actions columns
                    },
                    {
                        "type": "date",
                        "targets": 6 // Published date column
                    },
                    {
                        "responsivePriority": 1,
                        "targets": 1 // Title is most important
                    },
                    {
                        "responsivePriority": 2,
                        "targets": 4 // Status is second most important
                    },
                    {
                        "responsivePriority": 3,
                        "targets": 7 // Actions are third most important
                    }
                ],
                "dom": 't<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                "drawCallback": function(settings) {
                    // Re-style pagination to use Bootstrap classes
                    $('.dataTables_paginate > .pagination').addClass('pagination-sm mb-0');
                },
                "initComplete": function(settings) {
                    // Get the API instance
                    var api = this.api();
                    
                    // Move the length control to our custom container
                    var lengthControl = '<label>Show <select class="form-select form-select-sm d-inline-block" style="width: auto;" id="customLength">' +
                        '<option value="10">10</option>' +
                        '<option value="25">25</option>' +
                        '<option value="50">50</option>' +
                        '<option value="-1">All</option>' +
                        '</select> entries</label>';
                    $('#tableControlsTop').html(lengthControl);
                    
                    // Set the initial value
                    $('#customLength').val(api.page.len());
                    
                    // Handle change event
                    $('#customLength').on('change', function() {
                        var len = $(this).val();
                        api.page.len(parseInt(len)).draw();
                    });
                }
            });

            // Custom search input
            $('#searchInput').on('keyup', function() {
                table.search(this.value).draw();
            });

            // Category filter
            $('#categoryFilter').on('change', function() {
                const category = this.value;
                if (category) {
                    table.column(2).search('^' + category + '$', true, false).draw();
                } else {
                    table.column(2).search('').draw();
                }
            });

            // Status filter
            $('#statusFilter').on('change', function() {
                const status = this.value;
                if (status) {
                    table.column(4).search(status).draw();
                } else {
                    table.column(4).search('').draw();
                }
            });

            // Statistics Cards Click Filter
            $('.stat-filter-card').on('click', function() {
                const filterType = $(this).data('filter');
                
                // Remove active class from all cards
                $('.stat-filter-card').removeClass('active');
                
                // Add active class to clicked card
                $(this).addClass('active');
                
                // Apply filter based on card type
                if (filterType === 'all') {
                    // Clear all filters
                    table.column(4).search('').draw();
                    $('#statusFilter').val('');
                } else if (filterType === 'published') {
                    // Filter published posts
                    table.column(4).search('Published').draw();
                    $('#statusFilter').val('Published');
                } else if (filterType === 'draft') {
                    // Filter draft posts
                    table.column(4).search('Draft').draw();
                    $('#statusFilter').val('Draft');
                }
                
                // Smooth scroll to table on mobile
                if (window.innerWidth < 768) {
                    $('html, body').animate({
                        scrollTop: $('#blogsTable').offset().top - 100
                    }, 400);
                }
            });

            // Keyboard support for stat cards
            $('.stat-filter-card').on('keypress', function(e) {
                if (e.which === 13 || e.which === 32) { // Enter or Space
                    e.preventDefault();
                    $(this).click();
                }
            });

            // Set initial active state for "All" card
            $('.stat-filter-card[data-filter="all"]').addClass('active');

            // Sync status filter dropdown with card clicks
            $('#statusFilter').on('change', function() {
                const status = this.value;
                $('.stat-filter-card').removeClass('active');
                
                if (status === 'Published') {
                    $('.stat-filter-card[data-filter="published"]').addClass('active');
                } else if (status === 'Draft') {
                    $('.stat-filter-card[data-filter="draft"]').addClass('active');
                } else {
                    $('.stat-filter-card[data-filter="all"]').addClass('active');
                }
            });

            // Adjust DataTables on window resize for better mobile experience
            let resizeTimer;
            $(window).on('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    if (table) {
                        table.columns.adjust().responsive.recalc();
                    }
                }, 250);
            });
        });

        // Toggle blog publish status
        async function toggleBlogPublish(blogId) {
            try {
                const response = await fetch('@Url.Action("TogglePublish", "AdminBlog")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: blogId })
                });

                const result = await response.json();
                
                if (result.success) {
                    toastr.success(result.message || 'Blog status updated successfully');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    toastr.error(result.message || 'Failed to update blog status');
                }
            } catch (error) {
                console.error('Error toggling blog publish:', error);
                toastr.error('An error occurred while updating blog status', 'Error', {
                    timeOut: 4000,
                    closeButton: true,
                    positionClass: 'toast-top-right'
                });
            }
        }

        // Delete blog
        async function deleteBlog(blogId, blogTitle) {
            if (!confirm(`Are you sure you want to delete the blog post "${blogTitle}"?\n\nThis action cannot be undone.`)) {
                return;
            }

            try {
                const formData = new FormData();
                formData.append('id', blogId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]')?.value);

                const response = await fetch('@Url.Action("Delete", "AdminBlog")', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    toastr.success(`Blog post "${blogTitle}" deleted successfully`, 'Deleted', {
                        timeOut: 3000,
                        closeButton: true,
                        positionClass: 'toast-top-right'
                    });
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    toastr.error('Failed to delete blog post', 'Error', {
                        timeOut: 4000,
                        closeButton: true,
                        positionClass: 'toast-top-right'
                    });
                }
            } catch (error) {
                console.error('Error deleting blog:', error);
                toastr.error('An error occurred while deleting the blog post', 'Error', {
                    timeOut: 4000,
                    closeButton: true,
                    positionClass: 'toast-top-right'
                });
            }
        }
    </script>
