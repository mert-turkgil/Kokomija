@model Kokomija.Models.ViewModels.Admin.SiteSettingsViewModel
@{
    ViewData["Title"] = "Blog Management";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
                        <div>
                            <h1 class="h3 h1-lg">
                                <i class="bi bi-journal-text"></i>
                                Blog Management
                            </h1>
                            <p class="mb-0 small">Create and manage your blog posts in multiple languages</p>
                        </div>
                        <div class="d-flex flex-column flex-sm-row gap-2 w-100 w-lg-auto">
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i>
                                    <span class="d-none d-sm-inline">Back to Dashboard</span>
                                    <span class="d-inline d-sm-none">Back</span>
                            </a>
                            <a asp-action="Create" class="btn btn-primary btn-lg text-white">
                                <i class="bi bi-plus-lg"></i>
                                <span class="d-none d-sm-inline">Create New Blog Post</span>
                                <span class="d-inline d-sm-none">Create Post</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4 g-3">
            <div class="col-6 col-lg-3">
                <div class="stat-card-small stat-filter-card" data-filter="all" role="button" tabindex="0" title="Click to show all posts">
                    <div class="stat-icon-small bg-primary">
                        <i class="bi bi-journal-text"></i>
                    </div>
                    <div>
                        <h6>@Model.TotalBlogs</h6>
                        <small>Total Posts</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card-small stat-filter-card" data-filter="published" role="button" tabindex="0" title="Click to show published posts">
                    <div class="stat-icon-small bg-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div>
                        <h6>@Model.PublishedBlogs</h6>
                        <small>Published</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card-small stat-filter-card" data-filter="draft" role="button" tabindex="0" title="Click to show draft posts">
                    <div class="stat-icon-small bg-warning">
                        <i class="bi bi-pencil"></i>
                    </div>
                    <div>
                        <h6>@Model.DraftBlogs</h6>
                        <small>Drafts</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card-small" style="opacity: 0.7;">
                    <div class="stat-icon-small bg-info">
                        <i class="bi bi-globe"></i>
                    </div>
                    <div>
                        <h6>2</h6>
                        <small>Languages (EN/PL)</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blog Posts Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
                            <h5 class="mb-0">
                                <i class="bi bi-list"></i> All Blog Posts
                            </h5>
                        </div>

                        <!-- Search and Filter Section -->
                        <div class="row mb-3 g-2">
                            <div class="col-12 col-lg-6 mb-2 mb-lg-0">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" id="searchInput" class="form-control" placeholder="Search blog posts...">
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-lg-end">
                                    <select class="form-select" id="categoryFilter">
                                        <option value="">All Categories</option>
                                        @if (ViewBag.BlogCategories != null)
                                        {
                                            @foreach (var category in ViewBag.BlogCategories)
                                            {
                                                <option value="@category.Name">@category.Name</option>
                                            }
                                        }
                                    </select>
                                    <select class="form-select" id="statusFilter">
                                        <option value="">All Status</option>
                                        <option value="Published">Published</option>
                                        <option value="Draft">Draft</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- DataTables Length Control Container -->
                        <div id="tableControlsTop" class="mb-3"></div>

                        <div class="table-responsive">
                            <table id="blogsTable" class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th width="80">Image</th>
                                        <th>Title</th>
                                        <th width="150">Category</th>
                                        <th width="150">Author</th>
                                        <th width="100">Status</th>
                                        <th width="80">Views</th>
                                        <th width="120">Published</th>
                                        <th width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.BlogPosts != null && Model.BlogPosts.Any())
                                    {
                                        @foreach (var blog in Model.BlogPosts)
                                        {
                                            <tr>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(blog.FeaturedImage))
                                                    {
                                                        <img src="@blog.FeaturedImage" alt="@blog.Title" class="img-thumbnail" style="width: 60px; height: 40px; object-fit: cover;" onerror="this.src='/img/logo_black.png'">
                                                    }
                                                    else
                                                    {
                                                        <div class="text-muted" style="width: 60px; height: 40px; display: flex; align-items: center; justify-content: center; border: 1px dashed #ddd; border-radius: 4px;">
                                                            <i class="bi bi-image"></i>
                                                        </div>
                                                    }
                                                </td>
                                                <td>
                                                    <strong>@blog.Title</strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="bi bi-link-45deg"></i> @blog.Slug
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                        @blog.CategoryName
                                                    </span>
                                                </td>
                                                <td>
                                                    <small>
                                                        <i class="bi bi-person"></i> @blog.AuthorName
                                                    </small>
                                                </td>
                                                <td>
                                                    @if (blog.IsPublished)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Published
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-pencil"></i> Draft
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="bi bi-eye"></i> @blog.Views
                                                    </small>
                                                </td>
                                                <td>
                                                    @if (blog.PublishedDate.HasValue)
                                                    {
                                                        <small>@blog.PublishedDate.Value.ToString("MMM dd, yyyy")</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Not published</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="Edit" asp-route-id="@blog.Id" 
                                                           class="btn btn-outline-primary" title="Edit Blog Post">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-info" 
                                                                onclick="toggleBlogPublish(@blog.Id)" 
                                                                title="@(blog.IsPublished ? "Unpublish" : "Publish")">
                                                            <i class="bi bi-@(blog.IsPublished ? "eye-slash" : "eye")"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-danger" 
                                                                onclick="deleteBlog(@blog.Id, '@blog.Title')" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center py-5">
                                                <div class="empty-state">
                                                    <i class="bi bi-journal-text" style="font-size: 3rem; color: #ccc;"></i>
                                                    <h5 class="mt-3 text-muted">No blog posts yet</h5>
                                                    <p class="text-muted">Create your first blog post to get started!</p>
                                                    <a asp-action="Create" class="btn btn-primary mt-3 text-white">
                                                        <i class="bi bi-plus-lg"></i> Create New Blog Post
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

