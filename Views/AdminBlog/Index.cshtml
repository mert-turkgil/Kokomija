@model Kokomija.Models.ViewModels.Admin.SiteSettingsViewModel
@{
    ViewData["Title"] = "Blog Management";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-journal-text"></i>
                                Blog Management
                            </h1>
                            <p class="mb-0">Create and manage your blog posts in multiple languages</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i>
                                    Back to Dashboard
                            </a>
                            <a asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-lg"></i>
                                Create New Blog Post
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-primary">
                        <i class="bi bi-journal-text"></i>
                    </div>
                    <div>
                        <h6>@Model.TotalBlogs</h6>
                        <small>Total Posts</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div>
                        <h6>@Model.PublishedBlogs</h6>
                        <small>Published</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-warning">
                        <i class="bi bi-pencil"></i>
                    </div>
                    <div>
                        <h6>@Model.DraftBlogs</h6>
                        <small>Drafts</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-small">
                    <div class="stat-icon-small bg-info">
                        <i class="bi bi-globe"></i>
                    </div>
                    <div>
                        <h6>2</h6>
                        <small>Languages (EN/PL)</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Blog Posts Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                            <h5 class="mb-0">
                                <i class="bi bi-list"></i> All Blog Posts
                            </h5>
                            <div class="d-flex gap-2">
                                <select class="form-select form-select-sm" style="width: auto;" id="categoryFilter">
                                    <option value="">All Categories</option>
                                    @if (ViewBag.BlogCategories != null)
                                    {
                                        @foreach (var category in ViewBag.BlogCategories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                                <select class="form-select form-select-sm" style="width: auto;" id="statusFilter">
                                    <option value="">All Status</option>
                                    <option value="published">Published</option>
                                    <option value="draft">Draft</option>
                                </select>
                            </div>
                        </div>
                        <div class="table-responsive"
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th width="80">Image</th>
                                        <th>Title</th>
                                        <th width="150">Category</th>
                                        <th width="150">Author</th>
                                        <th width="100">Status</th>
                                        <th width="80">Views</th>
                                        <th width="120">Published</th>
                                        <th width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.BlogPosts != null && Model.BlogPosts.Any())
                                    {
                                        @foreach (var blog in Model.BlogPosts)
                                        {
                                            <tr>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(blog.FeaturedImage))
                                                    {
                                                        <img src="@blog.FeaturedImage" alt="@blog.Title" class="img-thumbnail" style="width: 60px; height: 40px; object-fit: cover;" onerror="this.src='/img/logo_black.png'">
                                                    }
                                                    else
                                                    {
                                                        <div class="text-muted" style="width: 60px; height: 40px; display: flex; align-items: center; justify-content: center; border: 1px dashed #ddd; border-radius: 4px;">
                                                            <i class="bi bi-image"></i>
                                                        </div>
                                                    }
                                                </td>
                                                <td>
                                                    <strong>@blog.Title</strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <i class="bi bi-link-45deg"></i> @blog.Slug
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                        @blog.CategoryName
                                                    </span>
                                                </td>
                                                <td>
                                                    <small>
                                                        <i class="bi bi-person"></i> @blog.AuthorName
                                                    </small>
                                                </td>
                                                <td>
                                                    @if (blog.IsPublished)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Published
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-pencil"></i> Draft
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="bi bi-eye"></i> @blog.Views
                                                    </small>
                                                </td>
                                                <td>
                                                    @if (blog.PublishedDate.HasValue)
                                                    {
                                                        <small>@blog.PublishedDate.Value.ToString("MMM dd, yyyy")</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Not published</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="Edit" asp-route-id="@blog.Id" 
                                                           class="btn btn-outline-primary" title="Edit Blog Post">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-info" 
                                                                onclick="toggleBlogPublish(@blog.Id)" 
                                                                title="@(blog.IsPublished ? "Unpublish" : "Publish")">
                                                            <i class="bi bi-@(blog.IsPublished ? "eye-slash" : "eye")"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-danger" 
                                                                onclick="deleteBlog(@blog.Id, '@blog.Title')" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center py-5">
                                                <div class="empty-state">
                                                    <i class="bi bi-journal-text" style="font-size: 3rem; color: #ccc;"></i>
                                                    <h5 class="mt-3 text-muted">No blog posts yet</h5>
                                                    <p class="text-muted">Create your first blog post to get started!</p>
                                                    <a asp-action="Create" class="btn btn-primary mt-3">
                                                        <i class="bi bi-plus-lg"></i> Create New Blog Post
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" />
    <style>
        .empty-state {
            padding: 3rem 1rem;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
    <script>
        // Configure toastr
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // Toggle blog publish status
        async function toggleBlogPublish(blogId) {
            try {
                const response = await fetch('@Url.Action("TogglePublish", "AdminBlog")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: blogId })
                });

                const result = await response.json();
                
                if (result.success) {
                    toastr.success(result.message || 'Blog status updated successfully');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    toastr.error(result.message || 'Failed to update blog status');
                }
            } catch (error) {
                console.error('Error toggling blog publish:', error);
                toastr.error('An error occurred while updating blog status', 'Error', {
                    timeOut: 4000,
                    closeButton: true,
                    positionClass: 'toast-top-right'
                });
            }
        }

        // Delete blog
        async function deleteBlog(blogId, blogTitle) {
            if (!confirm(`Are you sure you want to delete the blog post "${blogTitle}"?\n\nThis action cannot be undone.`)) {
                return;
            }

            try {
                const formData = new FormData();
                formData.append('id', blogId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]')?.value);

                const response = await fetch('@Url.Action("Delete", "AdminBlog")', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    toastr.success(`Blog post "${blogTitle}" deleted successfully`, 'Deleted', {
                        timeOut: 3000,
                        closeButton: true,
                        positionClass: 'toast-top-right'
                    });
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    toastr.error('Failed to delete blog post', 'Error', {
                        timeOut: 4000,
                        closeButton: true,
                        positionClass: 'toast-top-right'
                    });
                }
            } catch (error) {
                console.error('Error deleting blog:', error);
                toastr.error('An error occurred while deleting the blog post', 'Error', {
                    timeOut: 4000,
                    closeButton: true,
                    positionClass: 'toast-top-right'
                });
            }
        }
    </script>
}
