@model Kokomija.Models.ViewModels.HomeIndexViewModel
@inject Kokomija.Services.ILocalizationService L
@using System.Globalization

@{
    ViewData["Title"] = Model.MetaTitle;
    var currentCulture = CultureInfo.CurrentCulture.Name;
    var currentUICulture = CultureInfo.CurrentUICulture.Name;
}

<!-- Carousel -->
@await Component.InvokeAsync("CarouselSlide", new { location = "home" })

<!-- Hero Banner -->
@if (Model.HeroAd != null)
{
    <section class="py-5" style="background: linear-gradient(135deg, @Model.HeroAd.BackgroundColor 0%, #1a4057 100%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 text-white">
                    <h1 class="display-4 fw-bold mb-3">@Model.HeroAd.Title</h1>
                    <p class="lead mb-4">@Model.HeroAd.Subtitle</p>
                    <a href="@Model.HeroAd.ButtonUrl" class="btn btn-light btn-lg px-5 py-3">
                        @Model.HeroAd.ButtonText <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
}

<!-- Categories -->
@if (Model.FeaturedCategories.Any())
{
    <section class="py-5 categories-section">
        <div class="container">
            <h2 class="text-center mb-5">@L["Home_FeaturedCategories"]</h2>
            <div class="row g-4">
                @for (int i = 0; i < Model.FeaturedCategories.Count; i++)
                {
                    var category = Model.FeaturedCategories.ElementAt(i);
                    var gradientClass = $"category-gradient-{(i % 3) + 1}";
                    
                    <div class="col-md-4">
                        <a href="/products?category=@category.Slug" class="text-decoration-none">
                            <div class="card category-card h-100 shadow-sm overflow-hidden @gradientClass">
                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                {
                                    <div class="category-image-container">
                                        <img src="/img/@category.ImageUrl" class="card-img-top category-image" alt="@category.Name" onerror="this.style.display='none'; this.parentElement.classList.add('no-image');">
                                    </div>
                                }
                                else
                                {
                                    <div class="category-image-container no-image">
                                        <img src="/img/logo_black.png" class="category-logo" alt="Kokomija">
                                    </div>
                                }
                                <div class="card-body text-center p-4">
                                    <h3 class="h5 category-title">@category.Name</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Products -->
@if (Model.FeaturedProducts.Any())
{
    <section class="py-5 products-section">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">@L["Home_FeaturedProducts"]</h2>
                <p class="text-muted products-subtitle">@L["Home_FeaturedProducts_Subtitle"]</p>
            </div>
            <div class="row g-4">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        @await Component.InvokeAsync("ProductCard", new { productId = product.Id })
                    </div>
                }
            </div>
        </div>
    </section>
}
