@model Kokomija.Models.ViewModels.HomeIndexViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Kokomija.Resources.SharedResources> Localizer

@{
    ViewData["Title"] = Model.MetaTitle;
}

<!-- Carousel -->
@await Component.InvokeAsync("CarouselSlide", new { location = "home" })

<!-- Hero Banner -->
@if (Model.HeroAd != null)
{
    <section class="py-5" style="background: linear-gradient(135deg, @Model.HeroAd.BackgroundColor 0%, #1a4057 100%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 text-white">
                    <h1 class="display-4 fw-bold mb-3">@Model.HeroAd.Title</h1>
                    <p class="lead mb-4">@Model.HeroAd.Subtitle</p>
                    <a href="@Model.HeroAd.ButtonUrl" class="btn btn-light btn-lg px-5 py-3">
                        @Model.HeroAd.ButtonText <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
}

<!-- Categories -->
@if (Model.FeaturedCategories.Any())
{
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">@Localizer["Home_FeaturedCategories"]</h2>
            <div class="row g-4">
                @foreach (var category in Model.FeaturedCategories)
                {
                    <div class="col-md-4">
                        <a href="/products?category=@category.Slug" class="text-decoration-none">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <h3 class="h5 text-dark">@category.Name</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Products -->
@if (Model.FeaturedProducts.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">@Localizer["Home_FeaturedProducts"]</h2>
                <p class="text-muted">@Localizer["Home_FeaturedProducts_Subtitle"]</p>
            </div>
            <div class="row g-4">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        @await Component.InvokeAsync("ProductCard", new { productId = product.Id })
                    </div>
                }
            </div>
        </div>
    </section>
}
