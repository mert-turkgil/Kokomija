@model Kokomija.Models.ViewModels.ContactViewModel
@inject Kokomija.Services.ILocalizationService L

@{
    ViewData["Title"] = Model.MetaTitle;
}

@section Meta {
    <meta name="description" content="@Model.MetaDescription">
    <meta name="keywords" content="@Model.MetaKeywords">
    <link rel="canonical" href="@Model.CanonicalUrl">
}

<div class="contact-page">
    <div class="container py-5">
        <!-- Page Header -->
        <div class="contact-header text-center mb-5">
            <h1 class="display-4 fw-bold mb-3">@L["Contact_Title"]</h1>
            <p class="lead contact-subtitle">@L["Contact_Subtitle"]</p>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row g-5">
            <!-- Contact Information -->
            <div class="col-lg-4">
                <div class="contact-info-card">
                    <h3 class="mb-4">@L["Contact_GetInTouch"]</h3>
                    
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>@L["Contact_Address"]</h5>
                            <p>ul. Floriańska 31<br>31-019 Kraków<br>Poland</p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="bi bi-envelope-fill"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>@L["Contact_Email"]</h5>
                            <p><a href="mailto:kontakt@kokomija.com">kontakt@kokomija.com</a></p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>@L["Contact_Phone"]</h5>
                            <p><a href="tel:+48123456789">+48 123 456 789</a></p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="bi bi-clock-fill"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>@L["Contact_Hours"]</h5>
                            <p>@L["Contact_Hours_Weekdays"]<br>@L["Contact_Hours_Weekend"]</p>
                        </div>
                    </div>

                    <div class="social-links-contact mt-4">
                        <h5 class="mb-3">@L["Contact_FollowUs"]</h5>
                        <div class="d-flex gap-3">
                            <a href="#" class="social-link" aria-label="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="Pinterest">
                                <i class="fab fa-pinterest-p"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-8">
                <div class="contact-form-card">
                    <h3 class="mb-4">@L["Contact_SendMessage"]</h3>
                    
                    <form asp-action="Contact" method="post" class="contact-form">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label">@L["Contact_Form_Name"]</label>
                                    <input asp-for="Name" class="form-control" placeholder="@L["Contact_Form_Name_Placeholder"]">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">@L["Contact_Form_Email"]</label>
                                    <input asp-for="Email" class="form-control" placeholder="@L["Contact_Form_Email_Placeholder"]">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone" class="form-label">@L["Contact_Form_Phone"]</label>
                                    <input asp-for="Phone" class="form-control" placeholder="@L["Contact_Form_Phone_Placeholder"]">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Subject" class="form-label">@L["Contact_Form_Subject"]</label>
                                    <input asp-for="Subject" class="form-control" placeholder="@L["Contact_Form_Subject_Placeholder"]">
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Message" class="form-label">@L["Contact_Form_Message"]</label>
                                    <textarea asp-for="Message" class="form-control" rows="6" placeholder="@L["Contact_Form_Message_Placeholder"]"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-send-fill me-2"></i>@L["Contact_Form_Submit"]
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Google Maps Section -->
        <div class="map-section mt-5">
            <h3 class="text-center mb-4">@L["Contact_FindUs"]</h3>
            <div class="map-container">
                <!-- Kraków, Poland - Floriańska Street (Main Market Square area) -->
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2560.8534461891846!2d19.937762776912847!3d50.062006371509676!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165b0e66b07c55%3A0x5c7d8b6c8c8b8b8b!2sFlorianskaya%20St%2C%2031-019%20Krak%C3%B3w%2C%20Poland!5e0!3m2!1sen!2sus!4v1699000000000!5m2!1sen!2sus" 
                    width="100%" 
                    height="450" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Kokomija Location in Kraków, Poland">
                </iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
