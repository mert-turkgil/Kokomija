@model Kokomija.Models.ViewModels.Account.ForgotPasswordViewModel
@inject Kokomija.Services.ILocalizationService L

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-page">
    <div class="container">
        <div class="auth-card forgot-password-card">
            <div class="auth-header">
                <div class="icon-wrapper">
                    <i class="bi bi-key"></i>
                </div>
                <h2>Forgot Your Password?</h2>
                <p class="subtitle">
                    Enter your email address and we'll send you a link to reset your password
                </p>
            </div>

            <form asp-action="ForgotPassword" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <div class="input-group">
                        <span class="input-icon">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Email" 
                               class="form-control" 
                               placeholder="your@email.com" 
                               autocomplete="email"
                               autofocus />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <i class="bi bi-send"></i>
                    Send Reset Link
                </button>

                <div class="auth-links">
                    <a asp-action="Login" class="link-primary">
                        <i class="bi bi-arrow-left"></i>
                        Back to Login
                    </a>
                </div>
            </form>

            <div class="auth-footer">
                <p class="text-muted">
                    <i class="bi bi-shield-check"></i>
                    We'll never share your email with anyone else
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
