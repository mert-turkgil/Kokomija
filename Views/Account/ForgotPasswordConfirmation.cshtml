@inject Kokomija.Services.ILocalizationService L

@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="auth-page">
    <div class="container">
        <div class="auth-card confirmation-card">
            <div class="auth-header">
                <div class="icon-wrapper success">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h2>Check Your Email</h2>
                <p class="subtitle">
                    We've sent a password reset link to your email address
                </p>
            </div>

            <div class="confirmation-content">
                <div class="alert alert-success">
                    <i class="bi bi-envelope-check"></i>
                    <p class="mb-0">
                        If an account exists with the email you provided, you'll receive a password reset link shortly.
                    </p>
                </div>

                <div class="instructions">
                    <h5>What to do next:</h5>
                    <ol>
                        <li>Check your email inbox (and spam folder)</li>
                        <li>Click the reset link in the email</li>
                        <li>Create a new password</li>
                        <li>Login with your new password</li>
                    </ol>
                </div>

                <div class="help-section">
                    <p class="text-muted">
                        <i class="bi bi-clock"></i>
                        The reset link will expire in <strong>24 hours</strong> for security reasons.
                    </p>
                </div>
            </div>

            <div class="auth-links">
                <a asp-action="Login" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Back to Login
                </a>
                <a asp-action="ForgotPassword" class="link-primary">
                    Didn't receive email? Send again
                </a>
            </div>

            <div class="auth-footer">
                <p class="text-muted">
                    Need help? <a href="@Url.Action("Index", "Contact")">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>
