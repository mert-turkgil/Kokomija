@model Kokomija.Models.ViewModels.Account.LoginViewModel
@inject Kokomija.Services.ILocalizationService L

@{
    ViewData["Title"] = "Login";
}

<div class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card">
                    <!-- Logo -->
                    <div class="text-center mb-4">
                        <a asp-controller="Home" asp-action="Index" class="auth-logo">
                            <h2 class="mb-0">Kokomija</h2>
                        </a>
                    </div>

                    <!-- Header -->
                    <div class="auth-header text-center mb-4">
                        <h3 class="fw-bold mb-2">@L["Auth_WelcomeBack"]</h3>
                        <p class="text-muted">@L["Auth_SignInMessage"]</p>
                    </div>

                    <!-- Alert Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Login Form -->
                    <form asp-action="Login" asp-controller="Account" method="post" class="auth-form">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-2"></i>@L["Auth_EmailAddress"]
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   placeholder="@L["Auth_EmailPlaceholder"]" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock me-2"></i>@L["Auth_Password"]
                            </label>
                            <div class="password-input-group">
                                <input asp-for="Password" class="form-control form-control-lg" 
                                       placeholder="@L["Auth_PasswordPlaceholder"]" autocomplete="current-password" />
                                <button type="button" class="password-toggle" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">
                                    @L["Auth_RememberMe"]
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="text-decoration-none">
                                @L["Auth_ForgotPassword"]
                            </a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right me-2"></i>@L["Auth_SignIn"]
                        </button>
                    </form>

                    <!-- Social Login -->
                    <div class="social-login">
                        <div class="divider">
                            <span>@L["Auth_OrContinueWith"]</span>
                        </div>
                        
                        <div class="social-buttons">
                            <!-- Google Sign-In -->
                            <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-2" target="_blank">
                                @Html.AntiForgeryToken()
                                <button type="submit" name="provider" value="Google" class="btn-social btn-google w-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="20px" height="20px">
                                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                                    </svg>
                                    <span>@L["Auth_ContinueWithGoogle"]</span>
                                </button>
                            </form>
                            
                            <!-- Facebook Sign-In -->
                            <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" target="_blank">
                                @Html.AntiForgeryToken()
                                <button type="submit" name="provider" value="Facebook" class="btn-social btn-facebook w-100">
                                    <i class="bi bi-facebook" style="font-size: 20px;"></i>
                                    <span>@L["Auth_ContinueWithFacebook"]</span>
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Register Link -->
                    <div class="auth-links">
                        <p>@L["Auth_NoAccount"]</p>
                        <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">
                            <i class="bi bi-person-plus"></i>
                            @L["Auth_CreateAccount"]
                        </a>
                    </div>

                    <!-- Secure Badge -->
                    <div class="auth-footer">
                        <div class="stripe-badge">
                            <i class="bi bi-shield-check"></i>
                            @L["Auth_SecuredByStripe"]
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Debug: Log form submission
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Login page loaded');
            
            // Find all forms with ExternalLogin action
            const externalForms = document.querySelectorAll('form[action="/Account/ExternalLogin"]');
            console.log('Found ' + externalForms.length + ' external login forms');
            
            externalForms.forEach((form, index) => {
                console.log('Adding submit listener to form ' + index);
                form.addEventListener('submit', function(e) {
                    console.log('Form ' + index + ' is being submitted');
                    console.log('Form data:', new FormData(this));
                });
            });
        });

        function togglePassword(button) {
            const input = button.previousElementSibling;
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}
