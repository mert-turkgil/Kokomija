@{
    Layout = null;
    var redirectUrl = ViewData["RedirectUrl"] as string ?? "/";
    var isPopup = ViewData["IsPopup"] as bool? ?? false;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Successful</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .success-container {
            text-align: center;
            background: white;
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 400px;
        }
        .success-icon {
            font-size: 4rem;
            color: #28a745;
            animation: checkmark 0.5s ease-in-out;
        }
        h2 {
            color: #333;
            margin: 1rem 0;
        }
        p {
            color: #666;
            margin-bottom: 0;
        }
        .spinner {
            margin-top: 1.5rem;
            width: 30px;
            height: 30px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-left: auto;
            margin-right: auto;
        }
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        @@keyframes checkmark {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-icon">âœ“</div>
        <h2>Login Successful!</h2>
        <p>Redirecting you now...</p>
        <div class="spinner"></div>
    </div>

    <script>
        (function() {
            var isPopup = @(isPopup.ToString().ToLower());
            var redirectUrl = '@Html.Raw(redirectUrl)';
            
            if (isPopup && window.opener && !window.opener.closed) {
                // Send message to parent window
                window.opener.postMessage({
                    type: 'loginSuccess',
                    redirectUrl: redirectUrl
                }, '*');
                
                // Close this popup after a brief delay
                setTimeout(function() {
                    window.close();
                }, 1000);
            } else {
                // Not a popup or opener is closed - redirect in same window
                setTimeout(function() {
                    window.location.href = redirectUrl;
                }, 1000);
            }
        })();
    </script>
</body>
</html>
