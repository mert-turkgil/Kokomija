@model Kokomija.Models.ViewModels.Account.RegisterViewModel
@inject Kokomija.Services.ILocalizationService L
@inject Kokomija.Services.ILocalizedUrlService LocalizedUrl

@{
    ViewData["Title"] = "Register";
}
@section Styles{
    <style>
        .google-login-button:hover {
            background-color: #4285F4;
            color: white;
        }
        .google-icon {
            font-size: 18px;
            margin-bottom: 1px;
        }
        .google-login-button {
            border-radius: 20px;
            box-sizing: border-box;
            padding: 10px 15px;
            box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px,
                    rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
                    "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            font-size: 11px;
            gap: 5px;
        }
        
        /* Google Spinner Animation */
        .google-spinner-wrapper {
            display: none;
            justify-content: center;
            align-items: center;
            padding: 12px 0;
        }
        .google-spinner-wrapper.active {
            display: flex;
        }
        .google-spinner-wrapper .ball {
            --size: 12px;
            width: var(--size);
            height: var(--size);
            border-radius: 50%;
            margin: 0 6px;
            animation: 2s googleBounce ease infinite;
        }
        .google-spinner-wrapper .blue { background-color: #4285f5; }
        .google-spinner-wrapper .red { background-color: #ea4436; animation-delay: 0.25s; }
        .google-spinner-wrapper .yellow { background-color: #fbbd06; animation-delay: 0.5s; }
        .google-spinner-wrapper .green { background-color: #34a952; animation-delay: 0.75s; }
    </style>
    <style>
        @@keyframes googleBounce {
            50% { transform: translateY(10px); }
        }
    </style>
}
<div class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="auth-card">
                    <!-- Logo -->
                    <div class="text-center mb-4">
                        <a asp-controller="Home" asp-action="Index" class="auth-logo">
                            <h2 class="mb-0">Kokomija</h2>
                        </a>
                    </div>

                    <!-- Header -->
                    <div class="auth-header text-center mb-4">
                        <h3 class="fw-bold mb-2">@L["Auth_CreateYourAccount"]</h3>
                        <p class="text-muted">@L["Auth_JoinMessage"]</p>
                    </div>

                    <!-- Alert Messages -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Register Form -->
                    <form asp-action="Register" asp-controller="Account" method="post" class="auth-form" id="registerForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Name Fields -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="bi bi-person me-2"></i>@L["Auth_FirstName"]
                                    </label>
                                    <input asp-for="FirstName" class="form-control form-control-lg" 
                                           placeholder="@L["Auth_FirstNamePlaceholder"]" autocomplete="given-name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="bi bi-person me-2"></i>@L["Auth_LastName"]
                                    </label>
                                    <input asp-for="LastName" class="form-control form-control-lg" 
                                           placeholder="@L["Auth_LastNamePlaceholder"]" autocomplete="family-name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-2"></i>@L["Auth_EmailAddress"]
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   placeholder="@L["Auth_EmailPlaceholder"]" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div class="form-group mb-3">
                            <label asp-for="DateOfBirth" class="form-label">
                                <i class="bi bi-calendar-heart me-2"></i>@L["Auth_DateOfBirthOptional"]
                            </label>
                            <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg" 
                                   max="@DateTime.Now.AddYears(-13).ToString("yyyy-MM-dd")" 
                                   autocomplete="bday" />
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>@L["Auth_DateOfBirthHint"]
                            </small>
                            <span asp-validation-for="DateOfBirth" class="text-danger d-block"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock me-2"></i>@L["Auth_Password"]
                            </label>
                            <div class="password-input-group">
                                <input asp-for="Password" class="form-control form-control-lg" 
                                       placeholder="@L["Auth_CreatePassword"]" autocomplete="new-password" />
                                <button type="button" class="password-toggle" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                @L["Auth_PasswordMinimum"]
                            </small>
                            <span asp-validation-for="Password" class="text-danger d-block"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill me-2"></i>@L["Auth_ConfirmPassword"]
                            </label>
                            <div class="password-input-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" 
                                       placeholder="@L["Auth_ConfirmPasswordPlaceholder"]" autocomplete="new-password" />
                                <button type="button" class="password-toggle" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Terms & Conditions - Fixed checkbox binding -->
                        <div class="form-check custom-checkbox mb-3">
                            <input type="checkbox" 
                                   class="form-check-input" 
                                   id="AgreeToTerms" 
                                   name="AgreeToTerms" 
                                   value="true"
                                   @(Model.AgreeToTerms ? "checked" : "") />
                            <label class="form-check-label" for="AgreeToTerms">
                                @L["Auth_AgreeToTerms"] 
                                <a href="/Privacy" target="_blank" class="link-primary">@L["Auth_TermsAndConditions"]</a> @L["Auth_And"] 
                                <a href="/Privacy" target="_blank" class="link-primary">@L["Auth_PrivacyPolicy"]</a>
                                <span class="text-danger">*</span>
                            </label>
                            <span asp-validation-for="AgreeToTerms" class="text-danger small d-block"></span>
                        </div>

                        <!-- Newsletter Subscription - Fixed checkbox binding -->
                        <div class="form-check custom-checkbox mb-4">
                            <input type="checkbox" 
                                   class="form-check-input" 
                                   id="SubscribeToNewsletter" 
                                   name="SubscribeToNewsletter" 
                                   value="true"
                                   @(Model.SubscribeToNewsletter ? "checked" : "") />
                            <label class="form-check-label" for="SubscribeToNewsletter">
                                <i class="bi bi-envelope-heart me-1 text-primary"></i>
                                @L["Auth_SubscribeNewsletter"]
                            </label>
                            <small class="d-block text-muted mt-1 ps-4">
                                <i class="bi bi-gift me-1"></i>Get exclusive deals and early access to new products!
                            </small>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-person-plus me-2"></i>@L["Auth_CreateAccount"]
                        </button>
                    </form>

                    <!-- Social Login -->
                    <div class="social-login">
                        <div class="divider">
                            <span>@L["Auth_OrSignUpWith"]</span>
                        </div>
                        <div class="social-buttons">
                            <!-- Google Sign-Up -->
                            <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-2 google-login-form" target="_blank">
                                @Html.AntiForgeryToken()
                                <div class="google-spinner-wrapper">
                                    <div class="blue ball"></div>
                                    <div class="red ball"></div>
                                    <div class="yellow ball"></div>
                                    <div class="green ball"></div>
                                </div>

                                <button type="submit" name="provider" value="Google" class="btn-social btn-google w-100 google-login-button">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="20px" height="20px">
                                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                                    </svg>
                                    <span>@L["Auth_ContinueWithGoogle"]</span>
                                </button>
                            </form>
                            
                            <!-- Facebook Sign-Up -->
                            <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" target="_blank">
                                @Html.AntiForgeryToken()
                                <button type="submit" name="provider" value="Facebook" class="btn-social btn-facebook w-100">
                                    <i class="bi bi-facebook" style="font-size: 20px;"></i>
                                    <span>@L["Auth_ContinueWithFacebook"]</span>
                                </button>
                            </form>
                            @* Apple Sign-In - Uncomment when credentials are configured
                            <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <button type="submit" name="provider" value="Apple" class="btn-social btn-apple w-100">
                                    <i class="bi bi-apple" style="font-size: 20px;"></i>
                                    <span>Continue with Apple</span>
                                </button>
                            </form>
                            *@
                        </div>
                    </div>

                    <!-- Login Link -->
                    <div class="auth-links">
                        <p>@L["Auth_HaveAccount"]</p>
                        <a href="@LocalizedUrl.GetLoginUrl()" class="link-primary">
                            <i class="bi bi-box-arrow-in-right"></i>
                            @L["Auth_SignInLink"]
                        </a>
                    </div>

                    <!-- Benefits -->
                    <div class="auth-benefits mt-4">
                        <div class="row g-3 text-center">
                            <div class="col-4">
                                <i class="bi bi-shield-check text-primary fs-3"></i>
                                <small class="d-block mt-1 text-muted">@L["Auth_Secure"]</small>
                            </div>
                            <div class="col-4">
                                <i class="bi bi-gift text-primary fs-3"></i>
                                <small class="d-block mt-1 text-muted">@L["Auth_Rewards"]</small>
                            </div>
                            <div class="col-4">
                                <i class="bi bi-truck text-primary fs-3"></i>
                                <small class="d-block mt-1 text-muted">@L["Auth_FreeShip"]</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(button) {
            const input = button.previousElementSibling;
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
        
        // Google login spinner
        document.querySelectorAll('.google-login-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const button = this.querySelector('.google-login-button');
                const spinner = this.querySelector('.google-spinner-wrapper');
                if (button && spinner) {
                    button.style.display = 'none';
                    spinner.classList.add('active');
                }
            });
        });
        
        // Client-side validation for terms checkbox
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const termsCheckbox = document.getElementById('AgreeToTerms');
            if (!termsCheckbox.checked) {
                e.preventDefault();
                const validationSpan = termsCheckbox.parentElement.querySelector('.text-danger');
                if (validationSpan) {
                    validationSpan.textContent = 'You must agree to the terms and conditions';
                }
                termsCheckbox.focus();
                
                // Scroll to the checkbox
                termsCheckbox.scrollIntoView({ behavior: 'smooth', block: 'center' });
                return false;
            }
        });
    </script>
}

<style>
    /* Custom checkbox styling for dark theme compatibility */
    .custom-checkbox .form-check-input {
        width: 1.25rem;
        height: 1.25rem;
        margin-top: 0.15rem;
        border: 2px solid var(--bs-border-color);
        background-color: var(--bs-body-bg);
        transition: all 0.2s ease;
        cursor: pointer;
    }
    
    .custom-checkbox .form-check-input:checked {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }
    
    .custom-checkbox .form-check-input:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.2rem rgba(var(--bs-primary-rgb), 0.25);
    }
    
    .custom-checkbox .form-check-label {
        padding-left: 0.5rem;
        color: var(--bs-body-color);
        cursor: pointer;
    }
    
    [data-bs-theme="dark"] .custom-checkbox .form-check-input {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
    }
    
    [data-bs-theme="dark"] .custom-checkbox .form-check-input:checked {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }
    
    [data-bs-theme="dark"] .custom-checkbox .form-check-label {
        color: var(--bs-body-color);
    }
    
    [data-bs-theme="dark"] .custom-checkbox .form-check-label a {
        color: #7da2ff;
    }
    
    [data-bs-theme="dark"] .custom-checkbox .form-check-label a:hover {
        color: #9bb8ff;
    }
</style>
