@inject Kokomija.Services.ILocalizationService L

@{
    ViewData["Title"] = "Access Denied";
}

<div class="access-denied-page">
    <div class="container">
        <div class="access-denied-card">
            <div class="icon-wrapper">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1>Access Denied</h1>
            <p class="subtitle">You don't have permission to access this page</p>
            
            <div class="message">
                <p>
                    This area is restricted. If you believe you should have access, 
                    please contact an administrator or try logging in with a different account.
                </p>
            </div>

            <div class="actions">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="bi bi-house"></i>
                    Go to Homepage
                </a>
                @if (!User.Identity?.IsAuthenticated ?? true)
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Login
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </a>
                }
            </div>

            <div class="help-text">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Need help? <a href="@Url.Action("Index", "Contact")">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>
