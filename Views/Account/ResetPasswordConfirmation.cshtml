@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="auth-page">
    <div class="container">
        <div class="auth-card confirmation-card">
            <div class="auth-header">
                <div class="icon-wrapper success">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h2>Password Reset Successful!</h2>
                <p class="subtitle">
                    Your password has been changed successfully
                </p>
            </div>

            <div class="confirmation-content">
                <div class="alert alert-success">
                    <i class="bi bi-shield-check"></i>
                    <p class="mb-0">
                        You can now login with your new password
                    </p>
                </div>

                <div class="security-tips">
                    <h5>Security Tips:</h5>
                    <ul>
                        <li>Keep your password secure and don't share it with anyone</li>
                        <li>Use a unique password for your account</li>
                        <li>Enable two-factor authentication for extra security</li>
                        <li>Change your password regularly</li>
                    </ul>
                </div>
            </div>

            <div class="auth-links">
                <a asp-action="Login" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Login Now
                </a>
            </div>

            <div class="auth-footer">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    If you didn't reset your password, please <a href="@Url.Action("Index", "Contact")">contact support</a> immediately
                </p>
            </div>
        </div>
    </div>
</div>
