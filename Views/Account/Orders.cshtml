@model IEnumerable<Kokomija.Entity.Order>
@inject Kokomija.Services.ILocalizationService L

@{
    ViewData["Title"] = L["Orders_Title"];
}

<div class="orders-page container my-5">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@L["Nav_Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Index">@L["Account_Dashboard"]</a></li>
                    <li class="breadcrumb-item active">@L["Orders_Title"]</li>
                </ol>
            </nav>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-bag-check"></i>
                    @L["Orders_Title"]
                </h1>
                <a asp-controller="Account" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> @L["Back_To_Account"]
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-orders text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h3 class="mt-3">@L["Orders_No_Orders"]</h3>
            <p class="text-muted">@L["Orders_Start_Shopping"]</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-shop"></i> @L["Continue_Shopping"]
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-4">
                    <div class="order-card card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <small class="text-muted">@L["Order_Number"]</small>
                                    <div class="fw-bold">@order.OrderNumber</div>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">@L["Order_Date"]</small>
                                    <div>@order.CreatedAt.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="col-md-2">
                                    <small class="text-muted">@L["Order_Total"]</small>
                                    <div class="fw-bold">@order.TotalAmount.ToString("N2") PLN</div>
                                </div>
                                <div class="col-md-2">
                                    <small class="text-muted">@L["Payment_Status"]</small>
                                    <div>
                                        @switch (order.PaymentStatus)
                                        {
                                            case "paid":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> @L["Payment_Paid"]
                                                </span>
                                                break;
                                            case "pending":
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock"></i> @L["Payment_Pending"]
                                                </span>
                                                break;
                                            case "failed":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> @L["Payment_Failed"]
                                                </span>
                                                break;
                                            case "refunded":
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-arrow-counterclockwise"></i> @L["Payment_Refunded"]
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@order.PaymentStatus</span>
                                                break;
                                        }
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <small class="text-muted">@L["Order_Status"]</small>
                                    <div>
                                        @switch (order.OrderStatus)
                                        {
                                            case "pending":
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-hourglass-split"></i> @L["Status_Pending"]
                                                </span>
                                                break;
                                            case "processing":
                                                <span class="badge bg-info">
                                                    <i class="bi bi-gear"></i> @L["Status_Processing"]
                                                </span>
                                                break;
                                            case "shipped":
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-truck"></i> @L["Status_Shipped"]
                                                </span>
                                                break;
                                            case "delivered":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> @L["Status_Delivered"]
                                                </span>
                                                break;
                                            case "cancelled":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> @L["Status_Cancelled"]
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@order.OrderStatus</span>
                                                break;
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="order-items">
                                @foreach (var item in order.OrderItems)
                                {
                                    <div class="order-item d-flex align-items-center mb-3 pb-3 border-bottom">
                                        <div class="item-image me-3">
                                            @{
                                                var productImage = item.ProductVariant?.Product?.Images?.FirstOrDefault()?.ImageUrl;
                                            }
                                            @if (!string.IsNullOrEmpty(productImage))
                                            {
                                                <img src="@Url.Content($"~/images/{productImage}")" 
                                                     alt="@item.ProductName" 
                                                     class="rounded"
                                                     style="width: 80px; height: 80px; object-fit: cover;"
                                                     onerror="this.onerror=null; this.src='@Url.Content("~/images/logo.png")';">
                                            }
                                            else
                                            {
                                                <img src="@Url.Content("~/images/logo.png")" 
                                                     alt="Kokomija" 
                                                     class="rounded"
                                                     style="width: 80px; height: 80px; object-fit: contain; padding: 10px; background: #f8f9fa;">
                                            }
                                        </div>
                                        <div class="item-details flex-grow-1">
                                            <h6 class="mb-1">@item.ProductName</h6>
                                            <small class="text-muted">
                                                @if (!string.IsNullOrEmpty(item.Color))
                                                {
                                                    <span><i class="bi bi-palette"></i> @item.Color</span>
                                                    <span class="mx-1">•</span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Size))
                                                {
                                                    <span><i class="bi bi-rulers"></i> @item.Size</span>
                                                    <span class="mx-1">•</span>
                                                }
                                                <span>@L["Quantity"]: @item.Quantity</span>
                                            </small>
                                        </div>
                                        <div class="item-price text-end">
                                            <div class="fw-bold">@item.TotalPrice.ToString("N2") PLN</div>
                                            <small class="text-muted">@item.UnitPrice.ToString("N2") PLN @L["Each"]</small>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(order.StripePaymentIntentId))
                            {
                                <div class="payment-details mt-3 p-3 bg-light rounded">
                                    <h6 class="mb-2">
                                        <i class="bi bi-credit-card"></i> @L["Payment_Details"]
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <small class="text-muted">@L["Payment_Intent_ID"]:</small>
                                            <div class="font-monospace small">@order.StripePaymentIntentId</div>
                                        </div>
                                        @if (order.PaymentStatus == "failed")
                                        {
                                            <div class="col-md-6">
                                                <small class="text-muted">@L["Error_Message"]:</small>
                                                <div class="text-danger small">@L["Orders_PaymentFailedMessage"]</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="order-actions mt-3 d-flex gap-2">
                                <a asp-controller="Account" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> @L["View_Details"]
                                </a>
                                
                                @if (order.OrderStatus == "pending" || order.OrderStatus == "processing")
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="cancelOrder(@order.Id)">
                                        <i class="bi bi-x-circle"></i> @L["Cancel_Order"]
                                    </button>
                                }

                                @if (order.PaymentStatus == "paid" && order.OrderStatus == "delivered")
                                {
                                    <a asp-controller="Account" asp-action="OrderInvoice" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary" target="_blank">
                                        <i class="bi bi-file-earmark-pdf"></i> @L["Download_Invoice"]
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (!confirm('@L["Confirm_Cancel_Order"]')) return;

            $.ajax({
                url: `/Account/CancelOrder/${orderId}`,
                method: 'POST',
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message || '@L["Error_Cancelling_Order"]');
                    }
                },
                error: function() {
                    alert('@L["Error_Cancelling_Order"]');
                }
            });
        }
    </script>
}
