            const usageLimitPerUser = $('#usageLimitPerUser').val() ? parseInt($('#usageLimitPerUser').val()) : null;
            const productId = $('#productRestriction').val() ? parseInt($('#productRestriction').val()) : null;
            const categoryId = $('#categoryRestriction').val() ? parseInt($('#categoryRestriction').val()) : null;

