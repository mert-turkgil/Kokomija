                    position: position
                }),
                success: function(response) {
                    if (response.success) {
                        alert('Business profile created successfully!');
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error creating business profile');
                }
            });
        }

        function createAndVerifyBusinessProfile(userId) {
            const nip = $('#newNIP').val().trim();
            const companyName = $('#newCompanyName').val().trim().toUpperCase();
            const phone = $('#newCompanyPhone').val().trim();
            const email = $('#newCompanyEmail').val().trim();
            const contactPerson = $('#newContactPerson').val().trim();
            const position = $('#newPosition').val().trim();

            if (!nip || nip.length !== 10) {
                alert('Please enter a valid 10-digit NIP number.');
                return;
            }

            if (!companyName) {
                alert('Please enter a company name.');
                return;
            }

            if (!confirm('This will create a business profile and verify it with the Polish government registry.\\n\\nNIP: ' + nip + '\\nCompany: ' + companyName + '\\n\\nContinue?')) {
                return;
            }

            // Show loading state
            const verificationResultDiv = $('#createVerificationResult');
            const verificationMessageDiv = $('#createVerificationMessage');
            verificationResultDiv.show();
            verificationMessageDiv.html('<i class="spinner-border spinner-border-sm me-2"></i> Creating profile and verifying with government API...');
            verificationResultDiv.find('.alert').removeClass('alert-success alert-danger').addClass('alert-info');

            $.ajax({
                url: '@Url.Action("CreateAndVerifyBusinessProfile")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ 
                    userId: userId,
                    nip: nip,
                    companyName: companyName,
                    phone: phone,
                    companyEmail: email,
                    contactPerson: contactPerson,
                    position: position
                }),
                success: function(response) {
                    if (response.success) {
                        verificationMessageDiv.html(
                            '<strong><i class="bi bi-check-circle me-2"></i>Success!</strong><br>' +
                            '<div class="mt-2" style="white-space: pre-line;">' + response.message + '</div>'
                        );
                        verificationResultDiv.find('.alert').removeClass('alert-info alert-danger').addClass('alert-success');
                        
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    } else {
                        verificationMessageDiv.html(
                            '<strong><i class="bi bi-x-circle me-2"></i>Error</strong><br>' +
                            '<div class="mt-2" style="white-space: pre-line;">' + response.message + '</div>'
                        );
                        verificationResultDiv.find('.alert').removeClass('alert-info alert-success').addClass('alert-danger');
                    }
                },
                error: function(xhr) {
                    var errorMsg = 'An error occurred. Please try again.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    verificationMessageDiv.html(
                        '<strong><i class="bi bi-exclamation-triangle me-2"></i>Error</strong><br>' +
                        '<div class="mt-2">' + errorMsg + '</div>'
                    );
                    verificationResultDiv.find('.alert').removeClass('alert-info alert-success').addClass('alert-danger');
                }
            });
        }
    </script>
}