<div class="modal fade" id="createCouponModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create User-Specific Coupon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Create a coupon for: <strong>@Model.Email</strong></p>
                <form id="createCouponForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Coupon Code *</label>
                            <input type="text" class="form-control" id="couponCode" required 
                                   placeholder="e.g., WELCOME10" style="text-transform: uppercase;" />
                            <small class="text-muted">Will be automatically converted to uppercase</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Discount Type *</label>
                            <select class="form-select" id="discountType" required onchange="updateDiscountFields()">
                                <option value="percentage">Percentage (%)</option>
                                <option value="fixed">Fixed Amount ($)</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Discount Value *</label>
                            <input type="number" class="form-control" id="discountValue" required 
                                   min="0" step="0.01" placeholder="10" />
                        </div>
                        <div class="col-md-6 mb-3" id="maxDiscountField" style="display: none;">
                            <label class="form-label">Maximum Discount Amount</label>
                            <input type="number" class="form-control" id="maxDiscount" 
                                   min="0" step="0.01" placeholder="Optional" />
                            <small class="text-muted">For percentage discounts</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="couponDescription" rows="2" 
                                  placeholder="e.g., Special discount for valued customer"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Minimum Order Amount</label>
                            <input type="number" class="form-control" id="minOrderAmount" 
                                   min="0" step="0.01" placeholder="Optional" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Valid From</label>
                            <input type="datetime-local" class="form-control" id="validFrom" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Valid Until</label>
                            <input type="datetime-local" class="form-control" id="validUntil" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Usage Limit (Total)</label>
                            <input type="number" class="form-control" id="usageLimit" 
                                   min="1" placeholder="Unlimited" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Usage Limit Per User</label>
                        <input type="number" class="form-control" id="usageLimitPerUser" 
                               min="1" placeholder="Unlimited" />
                        <small class="text-muted">How many times this user can use the coupon</small>
                    </div>

                    <hr />
                    <h6 class="mb-3">Restrictions (Optional)</h6>

                    <div class="mb-3">
                        <label class="form-label">Restrict to Specific Product</label>
                        <select class="form-select" id="productRestriction">
                            <option value="">No restriction - Any product</option>
                            @foreach (var product in (List<Kokomija.Entity.Product>)ViewBag.Products)
                            {
                                <option value="@product.Id">@product.Name - @product.Price.ToString("C")</option>
                            }
                        </select>
                        <small class="text-muted">Coupon will only work for this product</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Restrict to Category</label>
                        <select class="form-select" id="categoryRestriction">
                            <option value="">No restriction - Any category</option>
                            @foreach (var category in (List<Kokomija.Entity.Category>)ViewBag.Categories)
                            {
                                var categoryName = category.Translations?.FirstOrDefault(t => t.CultureCode == "en-US")?.Name 
                                    ?? category.Translations?.FirstOrDefault()?.Name 
                                    ?? category.Name;
                                <option value="@category.Id">@categoryName</option>
                            }
                        </select>
                        <small class="text-muted">Coupon will only work for products in this category</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="createCoupon()">
                    <i class="bi bi-gift"></i> Create Coupon
                </button>
            </div>
        </div>
    </div>
</div>

