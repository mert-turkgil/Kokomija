@model Kokomija.Models.ViewModels.Admin.UserEditDto
@{
    ViewData["Title"] = $"Edit User: {Model.Email}";
}

<div class="admin-dashboard">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1>
                                <i class="bi bi-person-badge"></i>
                                Edit User
                            </h1>
                            <p class="mb-0">Manage user information and review their activity</p>
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- User Information -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-person-circle"></i> User Information
                        </h5>
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" asp-for="Email" readonly />
                                <small class="text-muted">Email cannot be changed</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" asp-for="EmailConfirmed" id="emailConfirmed" />
                                <label class="form-check-label" for="emailConfirmed">
                                    Email Confirmed
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- User Stats -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-graph-up"></i> Account Statistics
                        </h5>
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div>
                                <small class="text-muted">Account Status</small>
                                <h6 class="mb-0">
                                    @if (ViewBag.IsUserRoot == true)
                                    {
                                        <span class="badge bg-dark">
                                            <i class="bi bi-shield-fill-check"></i> Root Administrator
                                        </span>
                                        <small class="d-block text-muted mt-1">Protected - Cannot be banned or deleted</small>
                                    }
                                    else if (Model.IsBanned)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-fill-exclamation"></i> Banned
                                        </span>
                                        if (Model.BannedUntil.HasValue)
                                        {
                                            <small class="d-block text-muted">Until @Model.BannedUntil.Value.ToString("MMMM dd, yyyy")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill"></i> Active
                                        </span>
                                    }
                                </h6>
                            </div>
                            <div>
                                @if (ViewBag.IsUserRoot != true)
                                {
                                    @if (Model.IsBanned)
                                    {
                                        <button type="button" class="btn btn-sm btn-success" onclick="unbanUser('@Model.Id')">
                                            <i class="bi bi-unlock"></i> Unban
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-warning" onclick="showBanModal('@Model.Id')">
                                            <i class="bi bi-shield-exclamation"></i> Ban User
                                        </button>
                                    }
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted">Member Since</small>
                                <h6 class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</h6>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted">Last Login</small>
                                <h6 class="mb-0">
                                    @if (Model.LastLogin.HasValue)
                                    {
                                        @Model.LastLogin.Value.ToString("MMMM dd, yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </h6>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">Total Reviews</small>
                                <h6 class="mb-0">@Model.Reviews.Count</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Danger Zone -->
                @if (ViewBag.IsUserRoot != true)
                {
                    <div class="card border-danger mt-4">
                        <div class="card-body">
                            <h6 class="border-bottom border-danger pb-2 mb-3 text-danger">
                                <i class="bi bi-exclamation-triangle-fill"></i> Danger Zone
                            </h6>
                            <p class="mb-2">Permanently delete this user account. This action cannot be undone!</p>
                            <button type="button" class="btn btn-danger" onclick="deleteUser('@Model.Id', '@Model.Email')">
                                <i class="bi bi-trash"></i> Delete User
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card border-dark mt-4">
                        <div class="card-body">
                            <h6 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-shield-fill-check"></i> Root Protection
                            </h6>
                            <p class="mb-0"><strong>Root users are protected:</strong></p>
                            <ul class="mb-0 mt-2">
                                <li>Cannot be banned</li>
                                <li>Cannot be deleted</li>
                                <li>Only Root users can edit Root accounts</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Business Profile & Roles Row -->
        <div class="row mt-4">
            <!-- Role Management -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-shield-check"></i> Role Management
                        </h5>
                        
                        <div class="mb-3">
                            <label class="form-label">Current Roles</label>
                            <div class="d-flex flex-wrap gap-2" id="currentRoles">
                                @if (Model.AssignedRoles.Any())
                                {
                                    @foreach (var role in Model.AssignedRoles)
                                    {
                                        var roleBadgeClass = role switch
                                        {
                                            "Root" => "bg-dark",
                                            "Admin" => "bg-danger",
                                            "Moderator" => "bg-warning text-dark",
                                            "Business" => "bg-primary",
                                            "Developer" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                        <span class="badge @roleBadgeClass d-flex align-items-center gap-1" id="role-badge-@role">
                                            <i class="bi bi-person-badge"></i> @role
                                            @if (ViewBag.IsCurrentUserRoot == true && role != "Root")
                                            {
                                                <button type="button" class="btn-close btn-close-white ms-1" 
                                                        style="font-size: 0.6rem;" 
                                                        onclick="removeRole('@Model.Id', '@role')"
                                                        title="Remove @role role"></button>
                                            }
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No roles assigned (regular user)</span>
                                }
                            </div>
                        </div>

                        @if (ViewBag.IsCurrentUserRoot == true && Model.AvailableRoles.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label">Add Role</label>
                                <div class="input-group">
                                    <select class="form-select" id="roleToAdd">
                                        <option value="">Select a role...</option>
                                        @foreach (var role in Model.AvailableRoles)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>
                                    <button type="button" class="btn btn-primary" onclick="addRole('@Model.Id')">
                                        <i class="bi bi-plus"></i> Add
                                    </button>
                                </div>
                            </div>
                        }
                        
                        <div class="alert alert-info mt-3">
                            <small>
                                <i class="bi bi-info-circle me-1"></i>
                                <strong>Business Role:</strong> Automatically assigned when user verifies NIP number. Allows access to business products and pricing.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Business Profile -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-building"></i> Business Profile
                        </h5>
                        
                        @if (Model.BusinessProfile != null)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">Status</span>
                                    @if (Model.BusinessProfile.IsVerified)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Verified</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pending</span>
                                    }
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">Business Mode</span>
                                    <div class="form-check form-switch mb-0">
                                        <input class="form-check-input" type="checkbox" id="businessModeSwitch"
                                               @(Model.BusinessProfile.IsBusinessModeActive ? "checked" : "")
                                               onchange="toggleBusinessMode('@Model.Id')">
                                        <label class="form-check-label" for="businessModeSwitch">
                                            @(Model.BusinessProfile.IsBusinessModeActive ? "Active" : "Inactive")
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <hr />

                            <!-- PRIMARY: Government Registry Data (Read-Only) -->
                            <h6 class="mb-3">
                                <i class="bi bi-shield-check text-success"></i> Government Registry Data
                                <span class="badge bg-light text-muted ms-1" style="font-size: 0.65em;">PRIMARY - wl-api.mf.gov.pl</span>
                            </h6>
                            <div class="row g-2 small">
                                <div class="col-12">
                                    <strong>Company Name:</strong>
                                    <div class="fw-bold">@Model.BusinessProfile.CompanyName</div>
                                </div>
                                <div class="col-6">
                                    <strong>NIP:</strong>
                                    <div><code>@Model.BusinessProfile.NIP</code></div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.BusinessProfile.REGON))
                                {
                                    <div class="col-6">
                                        <strong>REGON:</strong>
                                        <div>@Model.BusinessProfile.REGON</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.BusinessProfile.KRS))
                                {
                                    <div class="col-6">
                                        <strong>KRS:</strong>
                                        <div>@Model.BusinessProfile.KRS</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.BusinessProfile.VATStatus))
                                {
                                    <div class="col-6">
                                        <strong>VAT Status:</strong>
                                        <div>
                                            @if (Model.BusinessProfile.VATStatus == "Czynny")
                                            {
                                                <span class="badge bg-success">@Model.BusinessProfile.VATStatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.BusinessProfile.VATStatus</span>
                                            }
                                        </div>
                                    </div>
                                }
                                @if (Model.BusinessProfile.VerifiedAt.HasValue)
                                {
                                    <div class="col-6">
                                        <strong>Verified At:</strong>
                                        <div>@Model.BusinessProfile.VerifiedAt.Value.ToString("dd MMM yyyy HH:mm")</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.BusinessProfile.ResidenceAddress))
                                {
                                    <div class="col-12">
                                        <strong>Registered Address:</strong>
                                        <div>@Model.BusinessProfile.ResidenceAddress</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.BusinessProfile.WorkingAddress) && Model.BusinessProfile.WorkingAddress != Model.BusinessProfile.ResidenceAddress)
                                {
                                    <div class="col-12">
                                        <strong>Working Address:</strong>
                                        <div>@Model.BusinessProfile.WorkingAddress</div>
                                    </div>
                                }
                                @if (Model.BusinessProfile.RegistrationLegalDate.HasValue)
                                {
                                    <div class="col-6">
                                        <strong>Registration Date:</strong>
                                        <div>@Model.BusinessProfile.RegistrationLegalDate.Value.ToString("dd MMM yyyy")</div>
                                    </div>
                                }
                            </div>
                            
                            <div class="mt-2">
                                <button type="button" class="btn btn-sm btn-outline-info" onclick="verifyWithGovernmentAPI('@Model.Id')">
                                    <i class="bi bi-arrow-repeat"></i> Re-verify with Gov API
                                </button>
                            </div>

                            <div id="verificationResult" class="mt-3" style="display: none;">
                                <div class="alert alert-dismissible fade show" role="alert">
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    <div id="verificationMessage"></div>
                                </div>
                            </div>

                            <hr />

                            <!-- SECONDARY: User/Admin Provided Contact Info (Editable) -->
                            <h6 class="mb-3">
                                <i class="bi bi-pencil text-primary"></i> Contact Information
                                <span class="badge bg-light text-muted ms-1" style="font-size: 0.65em;">SECONDARY - User/Admin</span>
                            </h6>
                            <form id="businessContactForm">
                                <input type="hidden" id="businessProfileId" value="@Model.BusinessProfile.Id" />

                                <div class="mb-3">
                                    <label for="companyPhone" class="form-label">Company Phone Number</label>
                                    <input type="tel" class="form-control form-control-sm" id="companyPhone" 
                                           value="@Model.BusinessProfile.Phone" placeholder="+48 123 456 789" />
                                </div>

                                <div class="mb-3">
                                    <label for="companyEmail" class="form-label">Company Email</label>
                                    <input type="email" class="form-control form-control-sm" id="companyEmail" 
                                           value="@Model.BusinessProfile.CompanyEmail" placeholder="company@example.com" />
                                </div>

                                <div class="mb-3">
                                    <label for="contactPerson" class="form-label">Contact Person</label>
                                    <input type="text" class="form-control form-control-sm" id="contactPerson" 
                                           value="@Model.BusinessProfile.ContactPerson" placeholder="Full Name" />
                                </div>

                                <div class="mb-3">
                                    <label for="position" class="form-label">Position / Role</label>
                                    <input type="text" class="form-control form-control-sm" id="position" 
                                           value="@Model.BusinessProfile.Position" placeholder="CEO, Manager, etc." />
                                </div>

                                <button type="button" class="btn btn-sm btn-primary" onclick="updateBusinessContact('@Model.Id')">
                                    <i class="bi bi-save"></i> Save Contact Info
                                </button>
                            </form>

                            <hr />
                            
                            <div class="d-flex gap-2">
                                @if (!Model.BusinessProfile.IsVerified)
                                {
                                    <button type="button" class="btn btn-sm btn-success" onclick="verifyBusinessProfile('@Model.Id')">
                                        <i class="bi bi-check-circle"></i> Manually Verify
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-warning" onclick="unverifyBusinessProfile('@Model.Id')">
                                        <i class="bi bi-x-circle"></i> Revoke Verification
                                    </button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteBusinessProfile('@Model.Id')">
                                    <i class="bi bi-trash"></i> Delete Profile
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="bi bi-building text-muted fs-1 mb-2 d-block"></i>
                                <p class="text-muted mb-3">No business profile found.</p>
                            </div>

                            <hr />

                            <!-- Create Business Profile Form -->
                            <h6 class="mb-3 text-muted">
                                <i class="bi bi-plus-circle"></i> Create New Business Profile
                            </h6>
                            <form id="createBusinessProfileForm">
                                <div class="alert alert-info small py-2">
                                    <i class="bi bi-info-circle me-1"></i>
                                    NIP + Company Name must match Polish government registry. Government data (REGON, KRS, VAT, Addresses) will be saved automatically on verification.
                                </div>

                                <h6 class="small text-muted fw-bold mb-2">
                                    <i class="bi bi-shield-check"></i> Verification Fields (must match registry)
                                </h6>
                                <div class="mb-3">
                                    <label for="newNIP" class="form-label">
                                        NIP (Tax ID) <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control form-control-sm" id="newNIP" 
                                           placeholder="0000000000" maxlength="10" pattern="[0-9]{10}" required />
                                    <small class="text-muted">10 digits, numbers only</small>
                                </div>

                                <div class="mb-3">
                                    <label for="newCompanyName" class="form-label">
                                        Company Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control form-control-sm" id="newCompanyName" 
                                           placeholder="COMPANY NAME (as in government registry)" style="text-transform: uppercase;" required />
                                    <small class="text-muted">Must match registry exactly (uppercase)</small>
                                </div>

                                <hr class="my-2" />
                                <h6 class="small text-muted fw-bold mb-2">
                                    <i class="bi bi-pencil"></i> Contact Information (optional, user/admin data)
                                </h6>

                                <div class="mb-3">
                                    <label for="newCompanyPhone" class="form-label">Company Phone Number</label>
                                    <input type="tel" class="form-control form-control-sm" id="newCompanyPhone" 
                                           placeholder="+48 123 456 789" />
                                </div>

                                <div class="mb-3">
                                    <label for="newCompanyEmail" class="form-label">Company Email</label>
                                    <input type="email" class="form-control form-control-sm" id="newCompanyEmail" 
                                           placeholder="company@example.com" />
                                </div>

                                <div class="mb-3">
                                    <label for="newContactPerson" class="form-label">Contact Person</label>
                                    <input type="text" class="form-control form-control-sm" id="newContactPerson" 
                                           placeholder="Full Name" />
                                </div>

                                <div class="mb-3">
                                    <label for="newPosition" class="form-label">Position / Role</label>
                                    <input type="text" class="form-control form-control-sm" id="newPosition" 
                                           placeholder="CEO, Manager, etc." />
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-success" onclick="createBusinessProfile('@Model.Id')">
                                        <i class="bi bi-plus-circle"></i> Create Profile
                                    </button>
                                    
                                    <button type="button" class="btn btn-sm btn-info" onclick="createAndVerifyBusinessProfile('@Model.Id')">
                                        <i class="bi bi-shield-check"></i> Create & Verify with Gov API
                                    </button>
                                </div>
                            </form>

                            <div id="createVerificationResult" class="mt-3" style="display: none;">
                                <div class="alert alert-dismissible fade show" role="alert">
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    <div id="createVerificationMessage"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- User Orders -->
        @if (Model.Orders.Any())
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-cart-fill"></i> Order History (@Model.Orders.Count)
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0" id="ordersTable">
                                    <thead>
                                        <tr>
                                            <th>Order #</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Discount</th>
                                            <th>Coupon</th>
                                            <th>Status</th>
                                            <th>Payment</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.Orders)
                                        {
                                            <tr>
                                                <td><strong>@order.OrderNumber</strong></td>
                                                <td><small>@order.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small></td>
                                                <td><span class="badge bg-info">@order.ItemCount</span></td>
                                                <td><strong>@order.TotalAmount.ToString("C")</strong></td>
                                                <td>
                                                    @if (order.DiscountAmount > 0)
                                                    {
                                                        <span class="text-success">-@order.DiscountAmount.ToString("C")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">—</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(order.CouponCode))
                                                    {
                                                        <span class="badge bg-warning">@order.CouponCode</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">—</span>
                                                    }
                                                </td>
                                                <td>
                                                    @{
                                                        var statusBadge = order.OrderStatus.ToLower() switch
                                                        {
                                                            "delivered" => "bg-success",
                                                            "shipped" => "bg-info",
                                                            "processing" => "bg-primary",
                                                            "cancelled" => "bg-danger",
                                                            _ => "bg-secondary"
                                                        };
                                                    }
                                                    <span class="badge @statusBadge">@order.OrderStatus</span>
                                                </td>
                                                <td>
                                                    @{
                                                        var paymentBadge = order.PaymentStatus.ToLower() switch
                                                        {
                                                            "paid" => "bg-success",
                                                            "pending" => "bg-warning",
                                                            "failed" => "bg-danger",
                                                            "refunded" => "bg-secondary",
                                                            _ => "bg-secondary"
                                                        };
                                                    }
                                                    <span class="badge @paymentBadge">@order.PaymentStatus</span>
                                                </td>
                                                <td>
                                                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary" target="_blank">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- User Wishlist -->
        @if (Model.Wishlist.Any())
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-heart-fill"></i> Wishlist (@Model.Wishlist.Count)
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0" id="wishlistTable">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Stock</th>
                                            <th>Status</th>
                                            <th>Added</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Wishlist)
