                alert('Please enter a coupon code');
                return;
            }
            if (!discountValue || discountValue <= 0) {
                alert('Please enter a valid discount value');
                return;
            }
            if (discountType === 'percentage' && discountValue > 100) {
                alert('Percentage discount cannot exceed 100%');
                return;
