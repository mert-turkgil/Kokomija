@using Kokomija.Resources
@inject Kokomija.Data.Abstract.IUnitOfWork UnitOfWork
@inject Kokomija.Services.ILocalizationService L

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#FFFFFF" />
    <title>@ViewData["Title"] - Kokomija</title>
    
    @await RenderSectionAsync("Meta", required: false)
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/lib/animate/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kokomija.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <a href="#main-content" class="skip-to-content">@L["Accessibility_SkipToContent"]</a>
    
    <script>
        // Set authentication status for cart manager
        document.body.dataset.authenticated = '@(User.Identity?.IsAuthenticated == true ? "true" : "false")';
    </script>
    
    <!-- Top Bar -->
    <div class="top-bar d-none d-lg-block">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Left Side - Theme Toggle & Links -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Theme Toggle -->
                    <label class="theme-switch" style="--toggle-size: 16px;">
                        <input type="checkbox" class="theme-switch__checkbox" id="theme-toggle" aria-label="@L["Accessibility_ToggleDarkMode"]">
                        <div class="theme-switch__container">
                            <div class="theme-switch__clouds"></div>
                            <div class="theme-switch__stars-container">
