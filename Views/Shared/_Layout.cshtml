                                </svg>
                            </div>
                            <div class="theme-switch__circle-container">
                                <div class="theme-switch__sun-moon-container">
                                    <div class="theme-switch__moon">
                                        <div class="theme-switch__spot"></div>
                                        <div class="theme-switch__spot"></div>
                                        <div class="theme-switch__spot"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </label>
                    
                    <span class="top-bar-separator">|</span>
                    
                    <a asp-controller="Home" asp-action="Index" class="top-bar-link">
                        <i class="fas fa-home me-1"></i> @L["TopBar_Home"]
                    </a>
                    <a asp-controller="Product" asp-action="Index" class="top-bar-link">
                        <i class="fas fa-shopping-bag me-1"></i> @L["TopBar_Shop"]
                    </a>
                    <a asp-controller="Home" asp-action="FAQ" class="top-bar-link">
                        <i class="fas fa-question-circle me-1"></i> @L["Nav_FAQ"]
                    </a>
                    <a asp-controller="Blog" asp-action="Index" class="top-bar-link">
                        <i class="fas fa-blog me-1"></i> @L["Blog_Title"]
                    </a>
                </div>
                
                <!-- Right Side - Contact Info -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Language Selector (ViewComponent) -->
                    @await Component.InvokeAsync("LanguageSelector")
                    
                    <span class="top-bar-separator">|</span>
                    
                    <a asp-controller="Home" asp-action="Contact" class="top-bar-item text-decoration-none">
                        <i class="fas fa-envelope me-1"></i> kontakt@kokomija.com
                    </a>
                    <span class="top-bar-separator">|</span>
                    <span class="top-bar-item text-success">
                        <i class="fas fa-truck me-1"></i> @L.GetString(key: "TopBar_FreeShipping")
                    </span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main Navigation -->
    <header>
        <nav class="navbar navbar-kokomija navbar-expand-lg navbar-sticky">
            <div class="container">
                @{
                    IEnumerable<Kokomija.Entity.Category>? categories = await UnitOfWork.Categories.GetNavbarCategoriesAsync();
                    List<Kokomija.Entity.Category>? categoryList = categories.ToList();
                    Kokomija.Entity.Category? womenCategory = categoryList.FirstOrDefault(c => (c.Slug == "women" || c.Slug == "damskie") && c.ParentCategoryId == null && c.IsActive);
                    Kokomija.Entity.Category? menCategory = categoryList.FirstOrDefault(c => (c.Slug == "men" || c.Slug == "meskie") && c.ParentCategoryId == null && c.IsActive);
                    IEnumerable<Kokomija.Entity.Category>? womenSubCategories = womenCategory?.SubCategories.Where(sc => sc.IsActive && sc.ShowInNavbar).OrderBy(sc => sc.DisplayOrder) ?? Enumerable.Empty<Kokomija.Entity.Category>();
                    IEnumerable<Kokomija.Entity.Category>? menSubCategories = menCategory?.SubCategories.Where(sc => sc.IsActive && sc.ShowInNavbar).OrderBy(sc => sc.DisplayOrder) ?? Enumerable.Empty<Kokomija.Entity.Category>();
                }
                
                <!-- Desktop Navigation (hidden on mobile) -->
                <div class="d-none d-lg-flex justify-content-between align-items-center w-100 py-2">
                    <!-- Left: Empty spacer for large screens -->
                    <div class="navbar-spacer"></div>
                    
                    <!-- Center: Men, Logo, Women -->
                    <div class="navbar-center d-flex align-items-center">
                        <!-- Men with Dropdown -->
                        <div class="nav-item dropdown dropdown-hover">
                            <a class="nav-link dropdown-toggle fw-bold fs-5" href="#" id="menDropdown" role="button" 
                               aria-expanded="false">
                                <i class="fa-solid fa-person"></i> @L["Nav_Men"].ToUpper()
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="menDropdown">
                                @if (menCategory != null)
                                {
                                    <li>
                                        <a class="dropdown-item fw-bold" asp-controller="Product" asp-action="Category" asp-route-slug="@menCategory.Slug">
                                            @L["Footer_AllProducts"] - @L["Nav_Men"]
                                        </a>
                                    </li>
                                    @if (menSubCategories.Any())
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        foreach (var subCat in menSubCategories)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Product" asp-action="Category" asp-route-slug="@subCat.Slug">
                                                    @if (!string.IsNullOrEmpty(subCat.IconCssClass))
                                                    {
                                                        <i class="@subCat.IconCssClass me-2"></i>
                                                    }
                                                    @subCat.Name
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">No categories available</span></li>
                                }
                            </ul>
                        </div>
                        
                        <!-- Logo -->
                        <a class="navbar-brand mx-4" asp-controller="Home" asp-action="Index">
                            <img src="~/img/blue-logo.png" alt="Kokomija Logo" class="navbar-logo" />
                        </a>
                        
                        <!-- Women with Dropdown -->
                        <div class="nav-item dropdown dropdown-hover">
                            <a class="nav-link dropdown-toggle fw-bold fs-5" href="#" id="womenDropdown" role="button" 
                               aria-expanded="false">
                                <i class="fa-solid fa-person-dress"></i> @L["Nav_Women"].ToUpper()
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="womenDropdown">
                                @if (womenCategory != null)
                                {
                                    <li>
                                        <a class="dropdown-item fw-bold" asp-controller="Product" asp-action="Category" asp-route-slug="@womenCategory.Slug">
                                            @L["Footer_AllProducts"] - @L["Nav_Women"]
                                        </a>
                                    </li>
                                    @if (womenSubCategories.Any())
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        foreach (var subCat in womenSubCategories)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Product" asp-action="Category" asp-route-slug="@subCat.Slug">
                                                    @if (!string.IsNullOrEmpty(subCat.IconCssClass))
                                                    {
                                                        <i class="@subCat.IconCssClass me-2"></i>
                                                    }
                                                    @subCat.Name
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">No categories available</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                    
                    <!-- Right: Search, Account, Cart -->
                    <div class="navbar-actions d-flex align-items-center gap-3">
                        <!-- Search Icon -->
                        <a href="/search" class="nav-icon" aria-label="@L["Nav_Search"]">
                            <i class="fas fa-search"></i>
                        </a>
                        
                        <!-- Account Icon -->
                        <div class="dropdown">
                            <a class="nav-icon" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="@L["Nav_Account"]">
                                <i class="fas fa-user"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <li><a class="dropdown-item" href="/account/profile"><i class="fas fa-user me-2"></i> @L["Account_MyAccount"]</a></li>
                                    <li><a class="dropdown-item" href="/account/orders"><i class="fas fa-box me-2"></i> @L["Account_Orders"]</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i> @L["Account_Logout"]</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="/account/login"><i class="fas fa-sign-in-alt me-2"></i> @L["Account_Login"]</a></li>
                                    <li><a class="dropdown-item" href="/account/register"><i class="fas fa-user-plus me-2"></i> @L["Account_Register"]</a></li>
                                }
                            </ul>
                        </div>
                        
                        <!-- Shopping Cart -->
                        <div class="dropdown dropdown-hover cart-dropdown">
                            <a href="/cart" class="nav-icon position-relative" aria-label="@L["Cart_ShoppingCart"]">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="badge bg-danger cart-badge" style="display: none;">0</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end cart-preview-dropdown">
                                <div class="cart-preview-header">
                                    <h6 class="mb-0">@L["Cart_ShoppingCart"]</h6>
                                </div>
                                <div class="cart-preview-items" id="cartPreviewItems">
                                    <div class="text-center py-4 text-muted">
                                        <i class="fas fa-shopping-cart mb-2" style="font-size: 2rem; opacity: 0.3;"></i>
                                        <p class="mb-0">@L["Cart_Empty"]</p>
                                    </div>
                                </div>
                                <div class="cart-preview-footer">
                                    <a href="/cart" class="btn btn-primary w-100">View Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Mobile Navigation (visible only on mobile) -->
                <div class="d-lg-none d-flex justify-content-between align-items-center w-100 py-2">
                    <!-- Mobile Menu Toggle -->
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMobile" 
                            aria-controls="navbarMobile" aria-expanded="false" aria-label="@L["Accessibility_ToggleNavigation"]">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <!-- Mobile Logo (Center) -->
                    <a class="navbar-brand mx-auto" asp-controller="Home" asp-action="Index">
                        <img src="~/img/blue-logo.png" alt="Kokomija Logo" style="height: 40px;" />
                    </a>
                    
                    <!-- Mobile Icons (Right) -->
                    <div class="d-flex align-items-center gap-2">
                        <a href="/search" class="nav-icon" aria-label="@L["Nav_Search"]">
                            <i class="fas fa-search"></i>
                        </a>
                        <a href="/cart" class="nav-icon position-relative" aria-label="@L["Cart_ShoppingCart"]">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="badge bg-danger cart-badge" style="display: none;">0</span>
                        </a>
                    </div>
                </div>
                
                <!-- Mobile Collapsible Menu -->
                <div class="collapse navbar-collapse d-lg-none" id="navbarMobile">
                    <ul class="navbar-nav w-100">
                        <!-- Men Category -->
                        @if (menCategory != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold" href="#" id="menDropdownMobile" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-mars me-2"></i> @L["Nav_Men"].ToUpper()
                                </a>
                                <ul class="dropdown-menu w-100" aria-labelledby="menDropdownMobile">
                                    <li>
                                        <a class="dropdown-item fw-bold" asp-controller="Product" asp-action="Category" asp-route-slug="@menCategory.Slug">
                                            @L["Footer_AllProducts"] - @L["Nav_Men"]
                                        </a>
                                    </li>
                                    @if (menSubCategories.Any())
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        foreach (var subCat in menSubCategories)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Product" asp-action="Category" asp-route-slug="@subCat.Slug">
                                                    @if (!string.IsNullOrEmpty(subCat.IconCssClass))
                                                    {
                                                        <i class="@subCat.IconCssClass me-2"></i>
                                                    }
                                                    @subCat.Name
                                                </a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                        
                        <!-- Women Category -->
                        @if (womenCategory != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold" href="#" id="womenDropdownMobile" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-venus me-2"></i> @L["Nav_Women"].ToUpper()
                                </a>
                                <ul class="dropdown-menu w-100" aria-labelledby="womenDropdownMobile">
                                    <li>
                                        <a class="dropdown-item fw-bold" asp-controller="Product" asp-action="Category" asp-route-slug="@womenCategory.Slug">
                                            @L["Footer_AllProducts"] - @L["Nav_Women"]
                                        </a>
                                    </li>
                                    @if (womenSubCategories.Any())
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        foreach (var subCat in womenSubCategories)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Product" asp-action="Category" asp-route-slug="@subCat.Slug">
                                                    @if (!string.IsNullOrEmpty(subCat.IconCssClass))
                                                    {
                                                        <i class="@subCat.IconCssClass me-2"></i>
                                                    }
                                                    @subCat.Name
                                                </a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                        
                        <li class="nav-item border-top mt-2 pt-2">
                            <a class="nav-link" href="/account/profile">
                                <i class="fas fa-user me-2"></i> @L["Account_MyAccount"]
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/account/orders">
                                    <i class="fas fa-box me-2"></i> @L["Account_Orders"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-start w-100">
                                        <i class="fas fa-sign-out-alt me-2"></i> @L["Account_Logout"]
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/account/login">
                                    <i class="fas fa-sign-in-alt me-2"></i> @L["Account_Login"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/account/register">
                                    <i class="fas fa-user-plus me-2"></i> @L["Account_Register"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main Content -->
    <main id="main-content" role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-kokomija">
        <div class="container">
            <div class="row g-4">
                <!-- Brand Column -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-brand">Kokomija</div>
                    <p class="footer-description">
                        @L["Footer_Brand_Description"]
                    </p>
                    <div class="social-links mt-3">
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" aria-label="Pinterest"><i class="fab fa-pinterest-p"></i></a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-title">@L["Footer_QuickLinks"]</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index">@L["TopBar_Home"]</a></li>
                        <li><a asp-controller="Product" asp-action="Index">@L["Footer_Shop"]</a></li>
                        <li><a asp-controller="Blog" asp-action="Index">@L["Blog_Title"]</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">@L["Nav_FAQ"]</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">@L["Footer_PrivacyPolicy"]</a></li>
                    </ul>
                </div>
                
                <!-- Categories -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-title">@L["Footer_Categories"]</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Product" asp-action="Category" asp-route-slug="damskie">@L["Nav_Women"]</a></li>
                        <li><a asp-controller="Product" asp-action="Category" asp-route-slug="meskie">@L["Nav_Men"]</a></li>
                        <li><a asp-controller="Product" asp-action="Index">@L["Footer_AllProducts"]</a></li>
                        <li><a asp-controller="Home" asp-action="Index">@L["Footer_NewArrivals"]</a></li>
                    </ul>
                </div>
                
                <!-- Customer Service -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-title">@L["Footer_CustomerService"]</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="FAQ">@L["Nav_FAQ"]</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">@L["Footer_ShippingInfo"]</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">@L["Footer_Returns"]</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">@L["Footer_SizeGuide"]</a></li>
