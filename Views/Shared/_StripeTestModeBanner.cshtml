@* 
    Add this partial view to your checkout page or create a banner component
    Shows test mode indicator when using Stripe test keys
*@

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var stripePublishableKey = Configuration["Stripe:PublishableKey"] ?? "";
    var isTestMode = stripePublishableKey.StartsWith("pk_test_");
}

@if (isTestMode)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-1 text-center">
                    <i class="bi bi-info-circle-fill" style="font-size: 2rem;"></i>
                </div>
                <div class="col-md-11">
                    <h5 class="alert-heading mb-2">
                        <i class="bi bi-credit-card"></i> Test Mode - No Real Charges
                    </h5>
                    <p class="mb-2">
                        This checkout is in <strong>test mode</strong>. No real payments will be processed.
                        Use the following test card numbers:
                    </p>
                    <div class="row">
                        <div class="col-md-4">
                            <strong>‚úÖ Successful Payment:</strong><br>
                            <code class="text-success">4242 4242 4242 4242</code>
                        </div>
                        <div class="col-md-4">
                            <strong>‚ùå Declined Payment:</strong><br>
                            <code class="text-danger">4000 0000 0000 0002</code>
                        </div>
                        <div class="col-md-4">
                            <strong>üîê 3D Secure:</strong><br>
                            <code class="text-info">4000 0027 6000 3184</code>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-2">
                        <strong>Expiry:</strong> Any future date | 
                        <strong>CVC:</strong> Any 3 digits | 
                        <strong>ZIP:</strong> Any 5 digits
                    </small>
                </div>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<style>
    .alert-warning code {
        background-color: rgba(255, 255, 255, 0.3);
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: bold;
    }
</style>
